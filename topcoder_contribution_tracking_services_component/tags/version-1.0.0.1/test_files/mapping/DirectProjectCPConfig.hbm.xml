<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.topcoder.utilities.cp.entities">
  <class name="DirectProjectCPConfig" table="direct_project_cp_config">
    <id name="directProjectId" column="tc_direct_project_id"/>
    <property name="useCP" column="use_cp"/>
    <property name="availableImmediateBudget" column="available_immediate_budget"/>
  </class>
  <sql-query name="checkDPDirectProjectId">
        <![CDATA[select count(*) from tc_direct_project dp where dp.project_id=:id]]>
   </sql-query>
  <query name="getAvailableInitialPayments">
        <![CDATA[select availableImmediateBudget from DirectProjectCPConfig e where e.directProjectId = :directProjectId]]>
   </query>
</hibernate-mapping>