<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.topcoder.utilities.cp.entities">
  <class name="ProjectContestCPConfig" table="project_contest_cp_config">
    <id name="contestId" column="project_id"/>
    <property name="cpRate" column="cp_rate"/>
    <one-to-one name="originalPayment" class="com.topcoder.utilities.cp.entities.OriginalPayment" cascade="all"/>
  </class>
  <sql-query name="checkPCContestId">
        <![CDATA[select count(*) from project p where p.project_id=:id]]>
   </sql-query>
</hibernate-mapping>