        <Property name="upload_bundle2"> 
      		<Property name="type"> 
                <Value>Database</Value> 
            </Property> 
      		<Property name="name"> 
                <Value>Submission Search Bundle</Value> 
            </Property> 
      		<Property name="context"> 
                <Value>
                SELECT submission_id
                    FROM submission
