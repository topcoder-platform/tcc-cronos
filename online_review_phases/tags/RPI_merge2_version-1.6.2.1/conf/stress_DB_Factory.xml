<CMConfig>
    <!-- Namespace for DBConnectionFactory component -->
    <Config name="com.topcoder.db.connectionfactory.DBConnectionFactoryImpl">
        <Property name="connections">
            <Property name="default">
                <Value>informix_connection</Value>
            </Property>
            <Property name="informix_connection">
                <Property name="producer">
                    <Value>com.topcoder.db.connectionfactory.producers.JDBCConnectionProducer</Value>
                </Property>
                <Property name="parameters">
                    <Property name="jdbc_driver">
                        <Value>@IFXDRIVER@</Value>
                    </Property>
                    <Property name="jdbc_url">
                        <Value>jdbc:informix-sqli://@DOMAIN@:@PORT@/@DATABASE@:INFORMIXSERVER=@SERVERNAME@</Value>
                    </Property>
                    <Property name="user">
                        <Value>@USERNAME@</Value>
                    </Property>
                    <Property name="password">
                        <Value>@PASSWORD@</Value>
                    </Property>
                </Property>
            </Property>
        </Property>
    </Config>
</CMConfig>
