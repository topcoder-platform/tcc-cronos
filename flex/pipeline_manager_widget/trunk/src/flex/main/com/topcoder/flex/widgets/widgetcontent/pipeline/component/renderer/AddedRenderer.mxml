<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml"
         paddingLeft="15"
         verticalScrollPolicy="off"
         horizontalScrollPolicy="off"
         click="doFilter()">
    <mx:Script>
        <![CDATA[
            import com.topcoder.flex.widgets.widgetcontent.pipeline.model.Model;
            import com.topcoder.flex.widgets.widgetcontent.pipeline.vo.Detail;
            
            [Bindable]
            private var detail:Detail;
            
            private var model:Model;
            
            override public function set data(value:Object):void {
                super.data=value;
                if (data is Detail) {
                    detail=data as Detail;
                    content.text=formatter.format(detail.added);
                    model=Model.getInstance(detail.uid);
                }
            }
            
            private function doFilter():void {
                if (model) {
                    model.filter.startAdd=detail.added;
                    model.filter.endAdd=detail.added;
                    model.filterDetail(false);
                }
            }
        ]]>
    </mx:Script>
    <mx:DateFormatter formatString="YYYY-MM-DD"
                      id="formatter"/>
    <mx:Text id="content"
             styleName="listStyle"
             width="100%"
             textDecoration="underline"
             buttonMode="true"
             useHandCursor="true"
             mouseChildren="false"/>
</mx:VBox>
