<!--
    
     A renderer for total value in break down page.
    
     @author snow01
     @since Pipeline Conversion Cockpit Integration Assembly 1 v1.0
     @version 1.0
-->
<mx:Box xmlns:mx="http://www.adobe.com/2006/mxml"
        paddingLeft="10"
        verticalAlign="middle">
    <mx:Script>
        <![CDATA[
            import com.topcoder.flex.widgets.widgetcontent.pipeline.vo.BreakDown;
            
            protected var brk:BreakDown;
            
            override public function set data(value:Object):void {
                if (value && value is BreakDown) {
                    brk=value as BreakDown;
                    if (brk.isTotal) {
                        content.styleName="listStyleBold";
                        content.setStyle("fontSize", 14);
                        content.text=getTotalLabel();
                    } else {
                        content.styleName="listStyle";
                        content.setStyle("fontSize", 12);
                        content.text=getNormalLabel();
                    }
                    
                }
            }
            
            protected function getTotalLabel():String {
                return "";
            }
            
            protected function getNormalLabel():String {
                return "";
            }
        ]]>
    </mx:Script>
    <mx:Text width="100%"
             id="content"
             styleName="listStyle"/>
</mx:Box>
