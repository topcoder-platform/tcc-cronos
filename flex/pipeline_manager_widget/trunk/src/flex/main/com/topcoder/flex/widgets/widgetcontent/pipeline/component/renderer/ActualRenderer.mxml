<!--
     A renderer for actual value in pipeline summary.
     
     @author snow01
     @since Pipeline Conversion Cockpit Integration Assembly 1 v1.0
     @version 1.0
-->
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml"
         paddingLeft="15"
         verticalAlign="middle">
    <mx:Script>
        <![CDATA[
            import com.topcoder.flex.widgets.widgetcontent.pipeline.vo.Summary;
            
            [Bindable]
            private var summaryData:Summary;
            
            override public function set data(value:Object):void {
                super.data=value;
                if (data is Summary) {
                    summaryData=data as Summary;
                    if (summaryData.isTotal) {
                        content.styleName="listStyleBold";
                        content.setStyle("fontSize", 14);
                        mark.visible=false;
                        mark.includeInLayout=false;
                    } else {
                        content.styleName="listStyle";
                        content.setStyle("fontSize", 12);
                        mark.visible=(summaryData.actualB > 0);
                        mark.includeInLayout=(summaryData.actualB > 0);
                        mark.width=15 * summaryData.actualB;
                        mark2.width=15 * summaryData.actualA;
                        
                        if (summaryData.actualB >= 3 && summaryData.actualB <= 4) {
                            mark.setStyle("backgroundColor", 0xff9900); // orange 0xff4800
                            mark2.setStyle("backgroundColor", 0xff1200);
                        } else if (summaryData.actualB >= 5 && summaryData.actualB <= 6) {
                            mark.setStyle("backgroundColor", 0xffff00);
                            mark2.setStyle("backgroundColor", 0xf5ed09);
                        } else if (summaryData.actualB >= 7) {
                            mark.setStyle("backgroundColor", 0x00ff00);
                            mark2.setStyle("backgroundColor", 0xc2ef0c);
                        } else {
                            mark.setStyle("backgroundColor", 0xffcdff);
                            mark2.setStyle("backgroundColor", 0xea21a5);
                        }
                        
                    }
                }
            }
        ]]>
    </mx:Script>
    <mx:Canvas id="mark"
               height="20"
               verticalScrollPolicy="off"
               horizontalScrollPolicy="off"
               borderStyle="outset">
        <mx:Box id="mark2"
                verticalScrollPolicy="off"
                horizontalScrollPolicy="off"
                verticalAlign="middle"
                borderStyle="none"
                height="100%"
                paddingLeft="0"
                paddingRight="0"
                paddingTop="0"
                paddingBottom="0"/>
        <mx:Label styleName="listStyle"
                  text="{summaryData.actualA.toString()}"/>
    </mx:Canvas>
    <mx:Label id="content"
              styleName="listStyle"
              text="{summaryData.actualB}"/>
</mx:HBox>
