<?xml version="1.0" encoding="utf-8"?>
<tc:RTEAddLinkWindowCodeBehind xmlns:mx="http://www.adobe.com/2006/mxml" 
	width="474" xmlns:tc="com.topcoder.flex.widgets.widgetcontent.LaunchAContestWidget.*" 
	title="Add a Web Link" 
	close="removePop()"
	styleName="tabConfigScreen">
	
	<mx:VBox width="100%" height="100%" horizontalGap="10" paddingTop="10" paddingBottom="10" paddingLeft="10" paddingRight="10" verticalGap="10">
	 	<mx:HBox verticalAlign="middle" width="100%">
	 	 	<mx:Label text="Link Name:" width="120"/> 
	  		<mx:TextInput id="linkName" width="150" /> 
	  	</mx:HBox>
	  	<mx:HBox verticalAlign="middle" width="100%">
	 	 	<mx:Label text="Link Web Address:" width="120"/> 
	  		<mx:TextInput id="linkWebAddress" width="150" /> 
	  	</mx:HBox>
	</mx:VBox>

	<mx:ControlBar width="100%" horizontalGap="8" horizontalAlign="center" verticalAlign="top" paddingTop="0" height="43">
	  	<mx:Button id="saveBtn" label="OK" click="{addLinkBtnHandler(this);}" /> 
	  	<mx:Button id="cancelBtn" label="Cancel" click="removePop();" /> 
  	</mx:ControlBar>

</tc:RTEAddLinkWindowCodeBehind>
