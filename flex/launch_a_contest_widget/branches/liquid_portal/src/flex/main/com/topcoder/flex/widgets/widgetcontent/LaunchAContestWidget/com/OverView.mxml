                                    custCost.enabled=false;
                                    ns_firstPlace.editable=false;
                                    ns_specReviewCost.editable = false;
                                }
                            } 
                        }
                    }
                }

                ns_updateAmount();
            }

            //
            // Update result based on type of contest.
