<!--

     This mxml component is to render project details page.

     @author TCSDEVELOPER
     @since My Project Widget Overhaul
-->
<mx:Grid xmlns:mx="http://www.adobe.com/2006/mxml"
         width="100%"
         borderStyle="solid"
         borderColor="#a9a9a9"
         paddingTop="20"
         paddingBottom="20"
         paddingLeft="20"
         paddingRight="20">
    <mx:Script>
        <![CDATA[
            import com.topcoder.flex.widgets.widgetcontent.projectwidget.model.Model;

            /**
             * Reference to the instance of data model class for this widget.
             */
            [Bindable]
            private var model:Model=Model.instance;
        ]]>
    </mx:Script>
    <mx:GridRow width="100%">
        <mx:GridItem horizontalAlign="right">
            <mx:Label textAlign="right"
                      text="Project Name:"
                      styleName="nameLabel"/>
        </mx:GridItem>
        <mx:GridItem width="100%"
                     verticalAlign="middle">
            <mx:Text id="prjName"
                     textAlign="left"
                     text="{model.currentProj.name}"
                     width="100%"/>
        </mx:GridItem>
    </mx:GridRow>
    <mx:GridRow width="100%">
        <mx:GridItem horizontalAlign="right">
            <mx:Label textAlign="right"
                      text="Project Description:"
                      styleName="nameLabel"/>
        </mx:GridItem>
        <mx:GridItem width="100%"
                     verticalAlign="middle">
            <mx:Text textAlign="left"
                     text="{model.currentProj.description}"
                     width="100%"/>
        </mx:GridItem>
    </mx:GridRow>
    <mx:GridRow width="100%">
        <mx:GridItem horizontalAlign="right">
            <mx:Label textAlign="right"
                      text="Start Date:"
                      styleName="nameLabel"/>
        </mx:GridItem>
        <mx:GridItem width="100%"
                     verticalAlign="middle">
            <mx:Text textAlign="left"
                     text="{model.currentProj.start.toDateString()}"
                     width="100%"/>
        </mx:GridItem>
    </mx:GridRow>
    <mx:GridRow width="100%">
        <mx:GridItem horizontalAlign="right">
            <mx:Label textAlign="right"
                      text="End Date:"
                      styleName="nameLabel"/>
        </mx:GridItem>
        <mx:GridItem width="100%"
                     verticalAlign="middle">
            <mx:Text textAlign="left"
                     text="{model.currentProj.end.toDateString()}"
                     width="100%"/>
        </mx:GridItem>
    </mx:GridRow>
    <mx:GridRow width="100%">
        <mx:GridItem horizontalAlign="right">
            <mx:Label textAlign="right"
                      text="Project Owner:"
                      styleName="nameLabel"/>
        </mx:GridItem>
        <mx:GridItem width="100%"
                     verticalAlign="middle">
            <mx:Text textAlign="left"
                     text="{model.currentProj.owner}"
                     width="100%"/>
        </mx:GridItem>
    </mx:GridRow>
    <mx:GridRow width="100%">
        <mx:GridItem horizontalAlign="right">
            <mx:Label textAlign="right"
                      text="Users:"
                      styleName="nameLabel"/>
        </mx:GridItem>
        <mx:GridItem width="100%"
                     verticalAlign="middle">
            <mx:Text textAlign="left"
                     text="{model.currentProj.users}"
                     width="100%"/>
        </mx:GridItem>
    </mx:GridRow>

</mx:Grid>
