	<mx:HTTPService id="jsonRequest" url="http://www.topcoder.com/data/?" resultFormat="text" result="handleJsonResult(event)" >
    	<mx:request>
			<module>BasicData</module>
			<c>dd_active_contests</c>
			<dsid>33</dsid>
			<drt>json</drt>
		</mx:request> 
    </mx:HTTPService>
    
    
	<mx:Script>
	    <![CDATA[
