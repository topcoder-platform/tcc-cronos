	</mx:Script>


	<mx:DataGrid id="dataGrid" width="100%" height="100%" dataProvider="{activeContents}"
        verticalScrollPolicy="off" horizontalScrollPolicy="off">
        <mx:columns>
            <mx:DataGridColumn dataField="contest_name"
                itemRenderer="com.topcoder.flex.widgets.widgetcontent.studioactivecontests.ContestLinkButton" 
                textAlign="left" headerText="Name" />
            <mx:DataGridColumn dataField="prize_total"
                labelFunction="formatPrice" textAlign="right" headerText="Prize" />
            <mx:DataGridColumn dataField="registrants"
                textAlign="right" headerText="Registrants" />
            <mx:DataGridColumn dataField="submission_count"
                textAlign="right" headerText="Submission Count" />
            <mx:DataGridColumn dataField="forum_id" textAlign="right" headerText="Forum ID" />
            <mx:DataGridColumn dataField="start_time" labelFunction="formatStartDate"
                headerText="Start Time" textAlign="center" />
            <mx:DataGridColumn dataField="end_time" labelFunction="formatEndDate"
                headerText="End Time" textAlign="center" />
        </mx:columns>
    </mx:DataGrid>
</tc:StudioActiveContestsWidgetCodeBehind>    
