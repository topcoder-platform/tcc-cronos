	        import mx.collections.ArrayCollection;
	        import mx.controls.dataGridClasses.DataGridColumn;
	        import mx.formatters.CurrencyFormatter;
	        import mx.formatters.DateFormatter;
	        import mx.rpc.events.ResultEvent;
	        [Bindable]
	        private var contestList=["Component Design","Component Development","Software Assembly","Software Testing","Software Architecture","Conceptualization","Specification","Studio"];
	
			// Use this when testing locally
			private var jsonString:String = 
				'{"feedname":"dd_active_contests",' + 
