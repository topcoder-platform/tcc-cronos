<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%">
	<mx:Script>
		<![CDATA[
			private function getRemove(dat:Object):Boolean {
				if (dat.hasOwnProperty("id") && dat.rank != null) {
					add.includeInLayout = false;
					mlabel.visible = true;
					mlabel.includeInLayout = true;
					mlabel.text = dat.id;
					return false;
				} else {
					mlabel.visible = false;
					mlabel.includeInLayout = false;
					if (dat.hasOwnProperty("add") && dat.add == "Taxes") {
						add.includeInLayout = true;
						return true;
					} else {
						add.includeInLayout = false;
						return false;
					}
				}
			}
		]]>
	</mx:Script>
	<mx:Label id="mlabel" styleName="middle" />
	<mx:Button styleName="SaveContinueButtonStyle" buttonMode="true" id="add" label="Add/Modify" visible="{getRemove(data)}" />
</mx:Canvas>
