<?xml version="1.0" encoding="ISO-8859-1"?>
<ejb-jar version="2.1"
         xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">

	<enterprise-beans>
		<session>
			<ejb-name>TimeEntryEJB</ejb-name>
			<local-home>com.topcoder.timetracker.entry.time.j2ee.TimeEntryManagerLocalHome</local-home>
			<local>com.topcoder.timetracker.entry.time.j2ee.TimeEntryManagerLocal</local>
			<ejb-class>com.topcoder.timetracker.entry.time.j2ee.TimeEntryManagerSessionBean</ejb-class>
			<session-type>Stateless</session-type>
			<transaction-type>Container</transaction-type>
		</session>
		<session>
			<ejb-name>TimeStatusEJB</ejb-name>
			<local-home>com.topcoder.timetracker.entry.time.j2ee.TimeStatusManagerLocalHome</local-home>
			<local>com.topcoder.timetracker.entry.time.j2ee.TimeStatusManagerLocal</local>
			<ejb-class>com.topcoder.timetracker.entry.time.j2ee.TimeStatusManagerSessionBean</ejb-class>
			<session-type>Stateless</session-type>
			<transaction-type>Container</transaction-type>
		</session>
		<session>
			<ejb-name>TaskTypeEJB</ejb-name>
			<local-home>com.topcoder.timetracker.entry.time.j2ee.TaskTypeManagerLocalHome</local-home>
			<local>com.topcoder.timetracker.entry.time.j2ee.TaskTypeManagerLocal</local>
			<ejb-class>com.topcoder.timetracker.entry.time.j2ee.TaskTypeManagerSessionBean</ejb-class>
			<session-type>Stateless</session-type>
			<transaction-type>Container</transaction-type>
		</session>
	</enterprise-beans>

	<assembly-descriptor>
		<container-transaction>
			<method>
				<ejb-name>TimeEntryEJB</ejb-name>
				<method-name>*</method-name>
			</method>
			<trans-attribute>Required</trans-attribute>
		</container-transaction>
		<container-transaction>
			<method>
				<ejb-name>TimeStatusEJB</ejb-name>
				<method-name>*</method-name>
			</method>
			<trans-attribute>Required</trans-attribute>
		</container-transaction>
		<container-transaction>
			<method>
				<ejb-name>TaskTypeEJB</ejb-name>
				<method-name>*</method-name>
			</method>
			<trans-attribute>Required</trans-attribute>
		</container-transaction>
	</assembly-descriptor>

</ejb-jar>
