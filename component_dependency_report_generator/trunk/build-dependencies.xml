<project name="Dependency Import" default="dist" basedir=".">
    <!-- property file defining the component's dependencies -->

    <!-- Properties used in compile_targets ANT target for JDK version x -->
    <property name="component.target" value="1.x"/>
    <property name="component.bootclasspath" value="${java_1_x_bootclasspath}"/>

    <!-- TCS dependencies -->

    <property name="base_exception.name" value="base_exception"/>
    <property name="base_exception.version" value="2.0"/>
    <property name="base_exception.jar.name" value="${base_exception.name}.jar"/>
    <property name="base_exception.jar" value="${tcs_libdir}/${base_exception.name}/${base_exception.version}/${base_exception.jar.name}"/>

    <property name="configuration_api.name" value="configuration_api"/>
    <property name="configuration_api.version" value="1.0"/>
    <property name="configuration_api.jar.name" value="${configuration_api.name}.jar"/>
    <property name="configuration_api.jar" value="${tcs_libdir}/${configuration_api.name}/${configuration_api.version}/${configuration_api.jar.name}"/>

    <property name="configuration_persistence.name" value="configuration_persistence"/>
    <property name="configuration_persistence.version" value="1.0.1"/>
    <property name="configuration_persistence.jar.name" value="${configuration_persistence.name}.jar"/>
    <property name="configuration_persistence.jar" value="${tcs_libdir}/${configuration_persistence.name}/${configuration_persistence.version}/${configuration_persistence.jar.name}"/>

    <property name="command_line_utility.name" value="command_line_utility"/>
    <property name="command_line_utility.version" value="1.0"/>
    <property name="command_line_utility.jar.name" value="${command_line_utility.name}.jar"/>
    <property name="command_line_utility.jar" value="${tcs_libdir}/${command_line_utility.name}/${command_line_utility.version}/${command_line_utility.jar.name}"/>

    <property name="component_dependency_extractor.jar" value="${test_reflib}/component_dependency_extractor.jar"/>


    <!-- 3rd party dependencies -->
    <property name="junit.jar" value="${ext_libdir}/junit/3.8.2/junit.jar"/>
    <property name="easymock.jar" value="${ext_libdir}/easymock/2.3/easymock.jar"/>

    <path id="component.tcs-dependencies">
        <pathelement location="${base_exception.jar}"/>
        <pathelement location="${configuration_api.jar}"/>
        <pathelement location="${configuration_persistence.jar}"/>
        <pathelement location="${command_line_utility.jar}"/>
        <pathelement location="${component_dependency_extractor.jar}"/>
    </path>

    <path id="component.3rdParty-dependencies"/>

    <path id="component.test.3rdParty-dependencies">
        <pathelement location="${junit.jar}"/>
        <pathelement location="${easymock.jar}"/>
    </path>

</project>