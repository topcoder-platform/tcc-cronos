<persistence xmlns="http://java.sun.com/xml/ns/persistence"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
   version="1.0">

    <persistence-unit name="drPoints" transaction-type="JPA">

        <provider>org.hibernate.ejb.HibernatePersistence</provider>

        <mapping-file>META-INF/DigitalRunPoints.hbm.xml</mapping-file>
		<mapping-file>META-INF/DigitalRunPointsOperation.hbm.xml</mapping-file>
		<mapping-file>META-INF/DigitalRunPointsReferenceType.hbm.xml</mapping-file>
		<mapping-file>META-INF/DigitalRunPointsStatus.hbm.xml</mapping-file>
		<mapping-file>META-INF/DigitalRunPointsType.hbm.xml</mapping-file>
		<mapping-file>META-INF/PointsCalculator.hbm.xml</mapping-file>
		<mapping-file>META-INF/ProjectType.hbm.xml</mapping-file>
		<mapping-file>META-INF/Track.hbm.xml</mapping-file>
		<mapping-file>META-INF/TrackContest.hbm.xml</mapping-file>
		<mapping-file>META-INF/TrackContestResultCalculator.hbm.xml</mapping-file>
		<mapping-file>META-INF/TrackContestType.hbm.xml</mapping-file>
		<mapping-file>META-INF/TrackStatus.hbm.xml</mapping-file>
		<mapping-file>META-INF/TrackType.hbm.xml</mapping-file>
		

        <!-- The dependency classes -->
        <class>com.topcoder.service.digitalrun.entity.BaseEntity</class>
		<class>com.topcoder.service.digitalrun.entity.ProjectType</class>
		<class>com.topcoder.service.digitalrun.entity.DigitalRunPoints</class>
		<class>com.topcoder.service.digitalrun.entity.DigitalRunPointsOperation</class>
		<class>com.topcoder.service.digitalrun.entity.DigitalRunPointsReferenceType</class>
		<class>com.topcoder.service.digitalrun.entity.DigitalRunPointsStatus</class>
		<class>com.topcoder.service.digitalrun.entity.DigitalRunPointsType</class>
		<class>com.topcoder.service.digitalrun.entity.TrackContest</class>
		<class>com.topcoder.service.digitalrun.entity.TrackContestType</class>
		<class>com.topcoder.service.digitalrun.entity.TrackContestResultCalculator</class>
		<class>com.topcoder.service.digitalrun.entity.PointsCalculator</class>
		<class>com.topcoder.service.digitalrun.entity.TrackType</class>
		<class>com.topcoder.service.digitalrun.entity.TrackStatus</class>
		<class>com.topcoder.service.digitalrun.entity.Track</class>

        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.InformixDialect"></property>
            <!--
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.connection.driver_class" value="com.informix.jdbc.IfxDriver"/>
            <property name="hibernate.connection.username" value="scott"/>
            <property name="hibernate.connection.password" value="tiger"/>
            <property name="hibernate.connection.url" value="jdbc:informix-sqli://192.168.0.1:1526/ServiceName:INFORMIXSERVER=informix1"/>
        </properties>

    </persistence-unit>
</persistence>
