<project name="Dependency Import" default="dist" basedir=".">
    <!-- property file defining the component's dependencies -->

    <!-- Properties used in compile_targets ANT target for JDK version x -->
    <property name="component.target" value="1.5" />
    <property name="component.bootclasspath" value="${java_1_5_bootclasspath}" />

    <!-- TCS dependencies -->
    <property name="id_generator.jar" value="${tcs_libdir}/id_generator/3.0/id_generator.jar" />
    <property name="base_exception.jar" value="${tcs_libdir}/base_exception/2.0.0/base_exception.jar" />

    <!-- 3rd party dependencies -->
    <property name="junit.jar" value="${ext_libdir}/junit/3.8.2/junit.jar" />
    <property name="informix.jar" value="${ext_libdir}/informix/3.0/ifxjdbc.jar" />
    <property name="javaee.jar" value="${ext_libdir}/javaee/1.5/javaee.jar" />


        <property name="jboss.dir" value="${ext_libdir}/jboss/4.2.2.GA" />   
        <property name="antlr.jar" value="${jboss.dir}/server/default/lib/antlr.jar"/>
        <property name="cglib.jar" value="${jboss.dir}/server/default/lib/cglib.jar"/>
        <property name="commons-collections.jar" value="${jboss.dir}/server/default/lib/commons-collections.jar"/>
        <property name="commons-logging.jar" value="${jboss.dir}/server/default/lib/commons-logging.jar"/>
        <property name="dom4j.jar" value="${jboss.dir}/server/default/lib/dom4j.jar"/>
        <property name="ejb3-persistence.jar" value="${jboss.dir}/server/default/lib/ejb3-persistence.jar"/>
        <property name="hibernate3.jar" value="${jboss.dir}/server/default/lib/hibernate3.jar"/>
        <property name="hibernate-annotations.jar" value="${jboss.dir}/server/default/lib/hibernate-annotations.jar"/>
        <property name="hibernate-entitymanager.jar" value="${jboss.dir}/server/default/lib/hibernate-entitymanager.jar"/>
        <property name="jboss-j2ee.jar" value="${jboss.dir}/server/default/lib/jboss-j2ee.jar"/>
        <property name="jboss-transaction.jar" value="${jboss.dir}/server/default/lib/jboss-transaction.jar"/>
        <property name="jboss-common.jar" value="${jboss.dir}/lib/jboss-common.jar"/>
        
        
    <path id="component.tcs-dependencies">
        <pathelement location="${id_generator.jar}" />
        <pathelement location="${base_exception.jar}" />
    </path>

    <path id="component.3rdParty-dependencies" >
        <pathelement location="${antlr.jar}"/>
        <pathelement location="${cglib.jar}"/>
        <pathelement location="${commons-collections.jar}"/>
        <pathelement location="${commons-logging.jar}"/>
        <pathelement location="${dom4j.jar}"/>
        <pathelement location="${ejb3-persistence.jar}"/>
        <pathelement location="${hibernate3.jar}"/>
        <pathelement location="${hibernate-annotations.jar}"/>
        <pathelement location="${hibernate-entitymanager.jar}"/>
        <pathelement location="${jboss-j2ee.jar}"/>
        <pathelement location="${jboss-transaction.jar}"/>
        <pathelement location="${jboss-common.jar}"/>
        <pathelement location="${informix.jar}"/>
        <pathelement location="${javaee.jar}"/>
    </path>

    <path id="component.test.3rdParty-dependencies">
        <pathelement location="${junit.jar}" />
    </path>

</project>