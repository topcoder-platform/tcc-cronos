<project name="Dependency Import" default="dist" basedir=".">
    <!-- Properties used in compile_targets ANT target -->
    <property name="component.target" value="1.5"/>
    <property name="component.bootclasspath" value="${java_1_5_bootclasspath}"/>
    
    <!-- property file defining the component's dependencies -->

    <!-- define TCS dependencies -->
    <property name="base_exception.jar" value="${tcs_libdir}/base_exception/2.0.0/base_exception.jar"/>
    <property name="project_management.jar" value="${tcs_libdir}/project_management/1.0/project_management.jar"/>  
    <property name="search_builder.jar" value="${tcs_libdir}/search_builder/1.3.2/search_builder.jar"/>

    <property name="studio_contest_manager.jar" value="${cronos_libdir}/studio_contest_manager/1.2.0/studio_contest_manager.jar"/>
    <property name="contest_and_submission_entities.jar" value="${cronos_libdir}/contest_and_submission_entities/1.1.0/contest_and_submission_entities.jar"/>
    
    <!-- define 3rd party dependencies -->
    <property name="jboss_lib" value="${ext_libdir}/jboss/4.2.2.GA/server/all/lib"/>
    <property name="antlr.jar" value="${jboss_lib}/antlr.jar"/>
    <property name="cglib.jar" value="${jboss_lib}/cglib.jar"/>
    <property name="commons-collections.jar" value="${jboss_lib}/commons-collections.jar"/>
    <property name="commons-logging.jar" value="${jboss_lib}/commons-logging.jar"/>
    <property name="hibernate.jar" value="${ext_libdir}/hibernate/3.2.6.GA/hibernate3.jar"/>
    
    <property name="cactus.jar" value="${ext_libdir}/cactus/1.7.2/j2ee1.3/cactus-1.7.2.jar"/>
    <property name="mockejb.jar" value="${ext_libdir}/mockejb/0.6-beta2/mockejb.jar"/>
    <property name="jakarta-oro.jar" value="${ext_libdir}/mockejb/0.6-beta2/jakarta-oro-2.0.8.jar"/>
    <property name="junit.jar" value="${ext_libdir}/junit/3.8.2/junit.jar"/>
        
    <path id="component.tcs-dependencies">
        <pathelement location="${base_exception.jar}"/>
        <pathelement location="${project_management.jar}"/>  
        <pathelement location="${search_builder.jar}"/>  
        <pathelement location="${studio_contest_manager.jar}"/>
        <pathelement location="${contest_and_submission_entities.jar}"/>  
    </path>
    <path id="component.3rdParty-dependencies">
        <pathelement location="${antlr.jar}"/>
        <pathelement location="${cglib.jar}"/>
        <pathelement location="${commons-collections.jar}"/>
        <pathelement location="${commons-logging.jar}"/>
        <pathelement location="${hibernate.jar}"/>
    </path>
    <path id="component.test.3rdParty-dependencies">
        <pathelement location="${junit.jar}"/>
        <pathelement location="${cactus.jar}"/>
        <pathelement location="${mockejb.jar}"/>
        <pathelement location="${jakarta-oro.jar}"/>
    </path>

</project>
