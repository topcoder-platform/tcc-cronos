<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.topcoder.service.digitalrun.entity">
    <class name="DigitalRunPoints" table="dr_points">

        <id name="id" column="dr_points_id" type="long">
            <generator
                class="com.topcoder.service.digitalrun.entity.idgenerator.DigitalRunEntityIDGenerator">
                <param name="id_generator_name">DigitalRunPoints_IDGenerator</param>
            </generator>
        </id>

        <many-to-one name="digitalRunPointsStatus" column="dr_points_status_id" not-null="true"/>
        <many-to-one name="digitalRunPointsType" column="dr_points_type_id"  not-null="true"/>
        <many-to-one name="digitalRunPointsReferenceType" column="dr_points_reference_type_id" not-null="true"/>
        <many-to-one name="digitalRunPointsOperation" column="dr_points_operation_id" not-null="true"/>
        <many-to-one name="track" column="track_id" not-null="true"/>

        <property name="userId" type="long" update="true" insert="true" column="user_id" not-null="true"/>

        <property name="amount" type="double" update="true" insert="true" column="amount" not-null="true"/>

        <property name="applicationDate" type="java.util.Date" update="true" insert="true"
            column="application_date" not-null="true"/>

        <property name="awardDate" type="java.util.Date" update="true" insert="true" column="award_date" not-null="true"/>

        <property name="referenceId" type="long" update="true" insert="true" column="reference_id" not-null="false"/>

        <property name="potential" type="boolean" update="true" insert="true" column="is_potential" not-null="false"/>

        <property name="creationDate" type="java.util.Date" update="false" insert="false"
            column="create_date" />

        <property name="modificationDate" type="java.util.Date" update="false" insert="false"
            column="modify_date" />

        <property name="description" type="java.lang.String" update="true" insert="true"
            column="dr_points_desc" length="50" not-null="true" />


    </class>

</hibernate-mapping>
