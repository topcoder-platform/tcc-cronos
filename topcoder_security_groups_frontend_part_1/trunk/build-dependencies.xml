<project name="Dependency Import" default="dist" basedir=".">
    <!-- property file defining the component's dependencies -->

    <!-- Properties used in compile_targets ANT target for JDK version x -->
    <property name="component.target" value="1.6"/>
    <property name="component.bootclasspath" value="${java_1_6_bootclasspath}"/>

    <!-- TCS dependencies -->
    <property name="mock.jar" value="test_files/mock.jar"/>
    
    <property name="base_exception.jar" value="${tcs_libdir}/base_exception/2.0.0/base_exception.jar"/>
    <property name="logging_wrapper.jar" value="${tcs_libdir}/logging_wrapper/2.0.0/logging_wrapper.jar"/>
    <property name="topcoder_commons_utility.jar" value="${tcs_libdir}/topcoder_commons_utility/1.0.0/topcoder_commons_utility.jar"/>
    <property name="typesafe_enum.jar" value="${tcs_libdir}/typesafe_enum/1.1.0/typesafe_enum.jar"/>
    <property name="object_formatter.jar" value="${tcs_libdir}/object_formatter/1.0.0/object_formatter.jar"/>

    <!-- 3rd party dependencies -->
    <property name="junit.jar" value="${ext_libdir}/junit/4.6/junit-4.6.jar"/>
    <property name="easymock.jar" value="${ext_libdir}/easymock/3.1/easymock-3.1.jar"/>
    <property name="log4j.jar" value="${ext_libdir}/log4j/1.2.15/log4j-1.2.15.jar"/>
        
    <property name="struts2_libdir" value="${ext_libdir}/struts/2.1.8.1/lib" />
    <property name="commons-beanutils-1.7.0.jar" value="${struts2_libdir}/commons-beanutils-1.7.0.jar" />
    <property name="commons-collections-3.2.jar" value="${struts2_libdir}/commons-collections-3.2.jar" />
    <property name="commons-fileupload-1.2.1.jar" value="${struts2_libdir}/commons-fileupload-1.2.1.jar" />
    <property name="commons-io-1.3.2.jar" value="${struts2_libdir}/commons-io-1.3.2.jar" />
    <property name="commons-lang-2.3.jar" value="${struts2_libdir}/commons-lang-2.3.jar" />
    <property name="commons-logging-1.1.1.jar" value="${struts2_libdir}/commons-logging-1.0.4.jar" />
    <property name="ezmorph-1.0.3.jar" value="${struts2_libdir}/ezmorph-1.0.3.jar" />
    <property name="freemarker-2.3.15.jar" value="${struts2_libdir}/freemarker-2.3.15.jar" />
    <property name="json-lib-2.3-jdk15.jar" value="${struts2_libdir}/json-lib-2.3-jdk15.jar" />
    <property name="ognl-2.7.3.jar" value="${struts2_libdir}/ognl-2.7.3.jar" />
    <property name="struts2-convention-plugin-2.1.8.jar" value="${struts2_libdir}/struts2-convention-plugin-2.1.8.jar" />
    <property name="struts2-core-2.1.8.1.jar" value="${struts2_libdir}/struts2-core-2.1.8.1.jar" />
    <property name="struts2-spring-plugin-2.1.8.jar" value="${struts2_libdir}/struts2-spring-plugin-2.1.8.jar" />
    <property name="struts2-json-plugin-2.1.8.jar" value="${struts2_libdir}/struts2-json-plugin-2.1.8.jar" />
    <property name="xwork-1.2.3.jar" value="${struts2_libdir}/xwork-1.2.3.jar" />
    <property name="xwork-core-2.1.6.jar" value="${struts2_libdir}/xwork-core-2.1.6.jar" />

    <!-- Spring libs -->
    <property name="spring_libdir" value="${ext_libdir}/spring/2.5.6.SEC01/dist" />
    <property name="spring.jar" value="${spring_libdir}/spring.jar" />
    <property name="spring-context.jar" value="${spring_libdir}/modules/spring-context.jar" />
    <property name="spring-context-support.jar" value="${spring_libdir}/modules/spring-context-support.jar" />
    <property name="spring-test.jar" value="${spring_libdir}/modules/spring-test.jar" />
    <property name="spring-tx.jar" value="${spring_libdir}/modules/spring-tx.jar" />
    <property name="common-annotations.jar" value="${spring_libdir}/lib/j2ee/common-annotations.jar" />

    <!-- Struts2 libraries -->
    <path id="struts.libs">
      <pathelement location="${commons-beanutils-1.7.0.jar}" />
      <pathelement location="${commons-collections-3.2.jar}" />
      <pathelement location="${commons-fileupload-1.2.1.jar}" />
      <pathelement location="${commons-io-1.3.2.jar}" />
      <pathelement location="${commons-lang-2.3.jar}" />
      <pathelement location="${commons-logging-1.1.1.jar}" />
      <pathelement location="${ezmorph-1.0.3.jar}" />
      <pathelement location="${freemarker-2.3.15.jar}" />
      <pathelement location="${json-lib-2.3-jdk15.jar}" />
      <pathelement location="${ognl-2.7.3.jar}" />
      <pathelement location="${struts2-convention-plugin-2.1.8.jar}" />
      <pathelement location="${struts2-core-2.1.8.1.jar}" />
      <pathelement location="${struts2-spring-plugin-2.1.8.jar}" />
      <pathelement location="${xwork-1.2.3.jar}" />
      <pathelement location="${xwork-core-2.1.6.jar}" />
    </path>

    <!-- Spring libraries -->
    <path id="spring.libs">
      <pathelement location="${spring-context-support.jar}" />
      <pathelement location="${spring-context.jar}" />
      <pathelement location="${spring-test.jar}" />
      <pathelement location="${spring-tx.jar}" />
      <pathelement location="${spring.jar}" />
      <pathelement location="${common-annotations.jar}" />
    </path>

    <path id="component.tcs-dependencies">
        <pathelement location="${mock.jar}"/>
        <pathelement location="${base_exception.jar}"/>
        <pathelement location="${logging_wrapper.jar}"/>
        <pathelement location="${topcoder_commons_utility.jar}"/>
        <pathelement location="${typesafe_enum.jar}"/>
        <pathelement location="${object_formatter.jar}"/>
    </path>

    <path id="component.3rdParty-dependencies">
        <path refid="struts.libs" />
        <path refid="spring.libs" />
        <pathelement location="${log4j.jar}"/>
    </path>

    <path id="component.test.3rdParty-dependencies">
        <pathelement location="${junit.jar}"/>
        <pathelement location="${easymock.jar}"/>
    </path>

</project>
