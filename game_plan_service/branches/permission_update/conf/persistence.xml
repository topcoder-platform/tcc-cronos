<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1.0"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="softwarePersistence" transaction-type="JTA">
      <!--  Hibernate persistence provider --> 
      <provider>org.hibernate.ejb.HibernatePersistence</provider> 
      <!--  The JTA data source --> 
      <jta-data-source>java:InformixDS</jta-data-source> 
      <properties>
          <!--  Informix Dialect  --> 
          <property name="hibernate.dialect" value="org.hibernate.dialect.InformixDialect" /> 
          <property name="hibernate.transaction.factory_class" value="org.hibernate.ejb.transaction.JoinableCMTTransactionFactory" /> 
          <property name="hibernate.transaction.manager_lookup_class" value="org.hibernate.transaction.JBossTransactionManagerLookup" /> 
          <!--  Show SQL for dev purpose  --> 
          <property name="hibernate.show_sql" value="false" /> 
      </properties>
  </persistence-unit>
  <persistence-unit name="studioPersistence" transaction-type="JTA">
      <!--  Hibernate persistence provider --> 
      <provider>org.hibernate.ejb.HibernatePersistence</provider> 
      <!--  The JTA data source --> 
      <jta-data-source>java:StudioDS</jta-data-source> 
      <properties>
          <!--  Informix Dialect  --> 
          <property name="hibernate.dialect" value="org.hibernate.dialect.InformixDialect" /> 
          <property name="hibernate.transaction.factory_class" value="org.hibernate.ejb.transaction.JoinableCMTTransactionFactory" /> 
          <property name="hibernate.transaction.manager_lookup_class" value="org.hibernate.transaction.JBossTransactionManagerLookup" /> 
          <!--  Show SQL for dev purpose  --> 
          <property name="hibernate.show_sql" value="false" /> 
      </properties>
  </persistence-unit>
</persistence>
