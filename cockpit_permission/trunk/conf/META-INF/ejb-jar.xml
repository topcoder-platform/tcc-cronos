<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
    http://java.sun.com/xml/ns/javaee/ejb-jar_3_0.xsd"
    version="3.0">
    <enterprise-beans>
        <session>
            <ejb-name>PermissionServiceBean</ejb-name>
            <remote>com.topcoder.service.permission.PermissionService</remote>
            <ejb-class>com.topcoder.service.permission.ejb.PermissionServiceBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
            <env-entry>
                <env-entry-name>unitName</env-entry-name>
                <env-entry-type>java.lang.String</env-entry-type>
                <env-entry-value>persistence/cockpit_permission</env-entry-value>
            </env-entry>
            <env-entry>
                <env-entry-name>loggerName</env-entry-name>
                <env-entry-type>java.lang.String</env-entry-type>
                <env-entry-value>permissionService</env-entry-value>
            </env-entry>
            <persistence-context-ref>
                <persistence-context-ref-name>persistence/cockpit_permission</persistence-context-ref-name>
                <persistence-unit-name>cockpit_permission</persistence-unit-name>                     
            </persistence-context-ref>
        </session>
    </enterprise-beans>
</ejb-jar>
