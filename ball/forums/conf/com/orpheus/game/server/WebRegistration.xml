<?xml version="1.0"?>
<CMConfig>
    <!-- Here is the configuration for the Web Registration component. The default namespace is used.-->
    <Config name="com.topcoder.web.registration">
        <!-- The property represents the namespace to be passed to the constructor of SimpleUserProfileManager -->
        <!-- from User Profile Manager component. -->
        <Property name="user_profile_manager_namespace">
            <Value>com.topcoder.user.profile.manager</Value>
        </Property>
        <!-- The property represents the names of the ProfileTypes used to create an UserProfile. -->
        <!-- The profile types are obtained from ProfileTypeFactory class from User Profile Manager component. -->
        <!-- The instance is obtained using the namespace for the SimpleUserProfileManager. -->
        <Property name="user_profile_type_names">
            <Value>base</Value>
            <Value>credentials</Value>
            <Value>player</Value>
        </Property>
        <!-- The property represents the key of the email address property for the user profiles. -->
        <!-- Optional. Defaults to "BaseProfileType.EMAIL_ADDRESS" -->
        <Property name="user_profile_email_address_key">
            <Value>email_address</Value>
        </Property>
        <!-- The properties needed to obtain an IDGenerator from the IDGeneratorFactory (ID Generator component).. -->
        <!-- Required. -->
        <Property name="user_profile_id_generator">
            <!-- The name of the id generator. Required. -->
            <Property name="name">
                <Value>web_registration_generator</Value>
            </Property>
            <!-- The impl. class of the id generator. Optional. Defaults to "com.topcoder.util.idgenerator.IDGeneratorImpl". -->
            <Property name="class">
                <Value>com.topcoder.util.idgenerator.IDGeneratorImpl</Value>
            </Property>
        </Property>
        <!-- The property represents the namespace to be passed to the constructor of EMailConfirmation -->
        <!-- from EMail Confirmation component. -->
        <!-- Optional. Defaults to "com.topcoder.validation.emailconfirmation" -->
        <Property name="email_confirmation_namespace">
            <Value>com.topcoder.validation.emailconfirmation</Value>
        </Property>
        <!-- The namespace to be passed to the constructor of FormInputParserManager. -->
        <!-- Optional. Defaults to "com.topcoder.web.registration.parsers" -->
        <Property name="form_input_manager_parser_namespace">
            <Value>com.topcoder.web.registration.parsers</Value>
        </Property>
        <!-- The property with the start phase. -->
        <Property name="start_phase">
            <!-- The name of the phase. -->
            <Property name="name">
                <Value>start</Value>
            </Property>
            <!-- The error page for the phase. In case an error occurs while performing initial tasks. -->
            <Property name="error_page">
                <Value>/server/activeGames.do</Value>
            </Property>
        </Property>
        <!-- The property with the question phases. The list is ordered. -->
        <!-- Required. Must have at least one phase with required content. -->
        <Property name="question_phases">
            <!-- This property declares the names of the question phases. -->
            <!-- At least one phase name should be present. These names will be the property names of the question phase properties below. -->
            <Property name="question_phase_names">
                <Value>step1</Value>
                <Value>step2</Value>
            </Property>
            <Property name="step1">
                <!-- The next page for the phase. It should be the page with the first det of questions for registration. -->
                <Property name="page">
                    <Value>/public/signup.jsp</Value>
                </Property>
                <!-- The error page for the phase. In case an error occurs while parsing form input. -->
                <Property name="error_page">
                    <Value>/public/signup.jsp</Value>
                </Property>
                <!-- The name of the validation set from Registration Data Validation used to validate form input. -->
                <!--Required. -->
                <Property name="validation_set_name">
                    <Value>tos_acceptance_rules</Value>
                </Property>
                <!-- The name of the parsers set from FormInputParserManager used to parse form input. -->
                <!--Required. -->
                <Property name="parser_set_name">
                    <Value>tos_parser_set</Value>
                </Property>
                <!-- Whether the content of the form is required, or can be ignored. -->
                <!-- Optional. Defaults to true. -->
                <Property name="content_required">
                    <Value>true</Value>
                </Property>
            </Property>
            <!-- Each phase is described in a property at this level. The name of the property is the name of the phase. -->
            <!-- At least one phase with required content must be present. -->
            <Property name="step2">
                <!-- The next page for the phase. It should be the page with the first det of questions for registration. -->
                <Property name="page">
                    <Value>/public/signup-step2.jsp</Value>
                </Property>
                <!-- The error page for the phase. In case an error occurs while parsing form input. -->
                <Property name="error_page">
                    <Value>/public/signup-step2.jsp</Value>
                </Property>
                <!-- The name of the validation set from Registration Data Validation used to validate form input. -->
                <!--Required. -->
                <Property name="validation_set_name">
                    <Value>player_info_validation_rules</Value>
                </Property>
                <!-- The name of the parsers set from FormInputParserManager used to parse form input. -->
                <!--Required. -->
                <Property name="parser_set_name">
                    <Value>player_info_parser_set</Value>
                </Property>
                <!-- Whether the content of the form is required, or can be ignored. -->
                <!-- Optional. Defaults to true. -->
                <Property name="content_required">
                    <Value>true</Value>
                </Property>
            </Property>
        </Property>
        <!-- The property with the email validation phase. -->
        <Property name="email_validation_request_phase">
            <!-- The name of the phase. -->
            <Property name="name">
                <Value>step3</Value>
            </Property>
            <!-- The next page for the phase. It should be a page that tells the user an email was sent to validate the registration. -->
            <Property name="page">
                <Value>/public/signup-step3.jsp</Value>
            </Property>
            <!-- The error page for the phase. In case an error occurs while persisting the user profile or sending the email. -->
            <Property name="error_page">
                <Value>/public/signup-step3.jsp</Value>
            </Property>
        </Property>
        <!-- The property with the email confirmation phase. -->
        <Property name="email_confirmation_request_phase">
            <!-- The name of the phase. -->
            <Property name="name">
                <Value>step4</Value>
            </Property>
            <!-- The next page for the phase. It should be a page that tells the user that the registration is complete. -->
            <Property name="page">
                <Value>/public/login.jsp</Value>
            </Property>
            <!-- The error page for the phase. In case an error occurs while loading the user profile from persistence or processing the confirmation. -->
            <!-- Required. -->
            <Property name="error_page">
                <Value>/public/error.jsp</Value>
            </Property>
        </Property>
    </Config>
