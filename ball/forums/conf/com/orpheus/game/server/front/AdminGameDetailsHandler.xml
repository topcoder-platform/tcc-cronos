<action name="AdminGameDetails" type="default" url-pattern="/server/admin/gameDetails.do" priority="10">
    <handler type="SessionValidationHandler">
        <login_page_result>login</login_page_result>
    </handler>
    <handler type="authorization">
        <allowed_profile_types>
            <value>admin</value>
        </allowed_profile_types>
        <failure_result>auth_failed</failure_result>
    </handler>
    <handler type="game_detail">
        <game_id_param_key>gameId</game_id_param_key>
        <game_detail_key>game</game_detail_key>
    </handler>
    <handler type="AdminGameSlotSponsorsHandler">
        <game_detail_key>game</game_detail_key>
        <slot_sponsors_key>slotSponsors</slot_sponsors_key>
        <object_factory_ns>com.orpheus.game.server.ObjectFactory</object_factory_ns>
    </handler>
    <result name="success" type="loggingForward">
        <forward-url>/WEB-INF/admin/games-changeOrder.jsp</forward-url>
        <log-message>presented with details for game {0}</log-message>
        <parameters>gameId</parameters>
        <category>ADMIN</category>
    </result>
    <result name="auth_failed" type="loggingForward">
        <forward-url>/public/authorizationError.jsp</forward-url>
        <log-message>attempted to view details for game {0} without ADMIN role assigned</log-message>
        <parameters>gameId</parameters>
        <category>ADMIN</category>
    </result>
    <result name="login" type="loggingForward">
        <forward-url>/public/timeout.jsp</forward-url>
        <log-message>failed to view details for game {0} due to session timeout or is not authenticated to server</log-message>
        <parameters>gameId</parameters>
        <category>ADMIN</category>
    </result>
</action>
