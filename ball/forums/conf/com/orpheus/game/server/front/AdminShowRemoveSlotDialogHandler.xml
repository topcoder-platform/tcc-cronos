<action name="ShowRemoveSlotDialog" type="default" url-pattern="/server/admin/showRemoveSlotDialog.do"
        priority="10">
    <handler type="SessionValidationHandler">
        <login_page_result>login</login_page_result>
    </handler>
    <handler type="authorization">
        <allowed_profile_types>
            <value>admin</value>
        </allowed_profile_types>
        <failure_result>auth_failed</failure_result>
    </handler>
    <result name="success" type="loggingForward">
        <forward-url>/WEB-INF/admin/remove-url.jsp</forward-url>
        <log-message>presented with Remove Slot confirmation dialog for slot {0} and game {1}</log-message>
        <parameters>slotId,gameId</parameters>
        <category>ADMIN</category>
    </result>
    <result name="auth_failed" type="loggingForward">
        <forward-url>/public/authorizationError.jsp</forward-url>
        <log-message>attempted to view Remove Slot confirmation dialog for slot {0} and game {1} without ADMIN role assigned</log-message>
        <parameters>slotId,gameId</parameters>
        <category>ADMIN</category>
    </result>
    <result name="login" type="loggingForward">
        <forward-url>/public/timeout.jsp</forward-url>
        <log-message>failed to view Remove Slot confirmation dialog for slot {0} and game {1} due to session timeout or is not authenticated to server</log-message>
        <parameters>slotId,gameId</parameters>
        <category>ADMIN</category>
    </result>
</action>
