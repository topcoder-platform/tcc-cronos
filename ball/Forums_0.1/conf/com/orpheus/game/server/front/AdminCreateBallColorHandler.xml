<action name="CreateBallColor" type="default" url-pattern="/server/admin/util/createBallColor.do"
        priority="10">
    <handler type="SessionValidationHandler">
        <login_page_result>login</login_page_result>
    </handler>
    <handler type="authorization">
        <allowed_profile_types>
            <value>admin</value>
        </allowed_profile_types>
        <failure_result>auth_failed</failure_result>
    </handler>
    <handler type="form_validation">
        <form-name>ballColorForm</form-name>
    </handler>
    <handler type="CreateBallColorHandler">
        <game_data_jndi_name>orpheus/GameData</game_data_jndi_name>
        <admin_data_jndi_name>orpheus/AdminData</admin_data_jndi_name>
        <jndi_context_name>default</jndi_context_name>
        <use_remote_interface>true</use_remote_interface>
    </handler>
    <result name="success" type="loggingForward">
        <forward-url>/WEB-INF/admin/util/create-color-success.jsp</forward-url>
        <log-message>created {0} Ball color</log-message>
        <parameters>colorName</parameters>
        <category>ADMIN</category>
    </result>
    <result name="auth_failed" type="loggingForward">
        <forward-url>/public/authorizationError.jsp</forward-url>
        <log-message>attempted to create Ball color without ADMIN role assigned</log-message>
        <category>ADMIN</category>
    </result>
    <result name="login" type="loggingForward">
        <forward-url>/public/timeout.jsp</forward-url>
        <log-message>failed to create Ball color due to session timeout or is not authenticated to server
        </log-message>
        <category>ADMIN</category>
    </result>
    <result name="validation-error" type="loggingForward">
        <forward-url>/server/admin/util/showCreateBallColorForm.do</forward-url>
        <log-message>failed to pass the validation for the Create Ball Color form with color name {0}
        </log-message>
        <parameters>colorName</parameters>
        <category>ADMIN</category>
    </result>
</action>