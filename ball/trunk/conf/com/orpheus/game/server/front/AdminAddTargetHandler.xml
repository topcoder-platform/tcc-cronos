<action name="AddTarget" type="default" url-pattern="/server/admin/addTarget.do" priority="10">
    <handler type="SessionValidationHandler">
        <login_page_result>login</login_page_result>
    </handler>
    <handler type="authorization">
        <allowed_profile_types>
            <value>admin</value>
        </allowed_profile_types>
        <failure_result>auth_failed</failure_result>
    </handler>
    <handler type="AdminAddTargetHandler">
        <slot_id_param_key>slotId</slot_id_param_key>
        <game_id_param_key>gameId</game_id_param_key>
        <text_param_key>text</text_param_key>
        <url_param_key>url</url_param_key>
        <random_string_image_ns>/var/opt/orpheus/conf/RandomStringImage.xml</random_string_image_ns>
        <game_data_jndi_name>orpheus/GameData</game_data_jndi_name>
        <jndi_context_name>default</jndi_context_name>
        <use_remote_interface>true</use_remote_interface>
    </handler>
    <result name="success" type="loggingForward">
        <forward-url>/server/admin/viewTargets.do</forward-url>
        <log-message>added the new target for game {0}, slot {1} with text "{2}" and URL {3}
        </log-message>
        <parameters>gameId,slotId,text,url</parameters>
        <category>ADMIN</category>
    </result>
    <result name="targetUnverified" type="loggingForward">
        <forward-url>/server/admin/viewTargets.do?replacementError=targetUnverified</forward-url>
        <log-message>failed to add the new target for game {0}, slot {1} with text "{2}" and URL {3} as the page at specified URL could not be retrieved
        </log-message>
        <parameters>gameId,slotId,text,url</parameters>
        <category>ADMIN</category>
    </result>
    <result name="invalidTarget" type="loggingForward">
        <forward-url>/server/admin/viewTargets.do?replacementError=invalidTarget</forward-url>
        <log-message>failed to add the new target for game {0}, slot {1} with text "{2}" and URL {3} as the target is not valid
        </log-message>
        <parameters>gameId,slotId,text,url</parameters>
        <category>ADMIN</category>
    </result>
    <result name="auth_failed" type="loggingForward">
        <forward-url>/public/authorizationError.jsp</forward-url>
        <log-message>attempted to add the new target for game {0}, slot {1} with text "{2}" and URL {3} without ADMIN role assigned
        </log-message>
        <parameters>gameId,slotId,text,url</parameters>
        <category>ADMIN</category>
    </result>
    <result name="login" type="loggingForward">
        <forward-url>/public/timeout.jsp</forward-url>
        <log-message>failed to add the new target for game {0}, slot {1} with text "{2}" and URL {3} due to session timeout or is not authenticated to server
        </log-message>
        <parameters>gameId,slotId,text,url</parameters>
        <category>ADMIN</category>
    </result>
</action>