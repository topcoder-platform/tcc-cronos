<action name="ShowStopGameDialog" type="default" url-pattern="/server/admin/showStopGameDialog.do"
        priority="10">
    <handler type="SessionValidationHandler">
        <login_page_result>login</login_page_result>
    </handler>
    <handler type="authorization">
        <allowed_profile_types>
            <value>admin</value>
        </allowed_profile_types>
        <failure_result>auth_failed</failure_result>
    </handler>
    <result name="success" type="loggingForward">
        <forward-url>/WEB-INF/admin/stop-game.jsp</forward-url>
        <log-message>presented with Stop Game confirmation dialog for game {0}</log-message>
        <parameters>gameId</parameters>
        <category>ADMIN</category>
    </result>
    <result name="auth_failed" type="loggingForward">
        <forward-url>/public/authorizationError.jsp</forward-url>
        <log-message>attempted to view Stop Game confirmation dialog for game {0} without ADMIN role assigned</log-message>
        <parameters>gameId</parameters>
        <category>ADMIN</category>
    </result>
    <result name="login" type="loggingForward">
        <forward-url>/public/timeout.jsp</forward-url>
        <log-message>failed to view Stop Game confirmation dialog for game {0} due to session timeout or is not authenticated to server</log-message>
        <parameters>gameId</parameters>
        <category>ADMIN</category>
    </result>
</action>
