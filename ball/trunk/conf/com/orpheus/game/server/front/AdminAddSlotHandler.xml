<action name="AddSlot" type="default" url-pattern="/server/admin/addSlot.do" priority="10">
    <handler type="SessionValidationHandler">
        <login_page_result>login</login_page_result>
    </handler>
    <handler type="authorization">
        <allowed_profile_types>
            <value>admin</value>
        </allowed_profile_types>
        <failure_result>auth_failed</failure_result>
    </handler>
    <handler type="AdminAddSlotHandler">
        <game_id_param_key>gameId</game_id_param_key>
        <block_id_param_key>blockId</block_id_param_key>
        <domain_id_param_key>domainId</domain_id_param_key>
        <image_id_param_key>imageId</image_id_param_key>
        <payment_param_key>maxBid</payment_param_key>
        <game_data_jndi_name>orpheus/GameData</game_data_jndi_name>
        <jndi_context_name>default</jndi_context_name>
        <use_remote_interface>true</use_remote_interface>
    </handler>
    <result name="success" type="loggingForward">
        <forward-url>/server/admin/gameDetails.do</forward-url>
        <log-message>added new empty slot for game {0} and block {1}</log-message>
        <parameters>gameId,blockId</parameters>
        <category>ADMIN</category>
    </result>
    <result name="auth_failed" type="loggingForward">
        <forward-url>/public/authorizationError.jsp</forward-url>
        <log-message>attempted to add new slot for game {0} and block {1} without ADMIN role assigned</log-message>
        <parameters>gameId,blockId</parameters>
        <category>ADMIN</category>
    </result>
    <result name="blockNotFound" type="loggingForward">
        <forward-url>/public/error.jsp</forward-url>
        <log-message>failed to add new slot for game {0} and block {1} as the block is not found</log-message>
        <parameters>gameId,blockId</parameters>
        <category>ADMIN</category>
    </result>
    <result name="login" type="loggingForward">
        <forward-url>/public/timeout.jsp</forward-url>
        <log-message>failed to add new slot for game {0} and block {1} due to session timeout or is not authenticated to server</log-message>
        <parameters>gameId,blockId</parameters>
        <category>ADMIN</category>
    </result>
</action>
