<action name="ShowAddSlotForm" type="default" url-pattern="/server/admin/showAddSlotForm.do"
        priority="10">
    <handler type="SessionValidationHandler">
        <login_page_result>login</login_page_result>
    </handler>
    <handler type="authorization">
        <allowed_profile_types>
            <value>admin</value>
        </allowed_profile_types>
        <failure_result>auth_failed</failure_result>
    </handler>
    <handler type="PrivateAuctionDataHandler">
        <sponsors_key>sponsors</sponsors_key>
        <domains_key>domains</domains_key>
        <images_key>images</images_key>
        <object_factory_ns>com.orpheus.game.server.ObjectFactory</object_factory_ns>
        <game_data_jndi_name>orpheus/GameData</game_data_jndi_name>
        <jndi_context_name>default</jndi_context_name>
        <use_remote_interface>true</use_remote_interface>
    </handler>
    <result name="success" type="loggingForward">
        <forward-url>/WEB-INF/admin/add-slot.jsp</forward-url>
        <log-message>presented with Add Slot form for game {0} and block {1}</log-message>
        <parameters>gameId,blockId</parameters>
        <category>ADMIN</category>
    </result>
    <result name="auth_failed" type="loggingForward">
        <forward-url>/public/authorizationError.jsp</forward-url>
        <log-message>attempted to view Add Slot form for game {0} and block {1} without ADMIN role assigned</log-message>
        <parameters>gameId,blockId</parameters>
        <category>ADMIN</category>
    </result>
    <result name="login" type="loggingForward">
        <forward-url>/public/timeout.jsp</forward-url>
        <log-message>failed to view Add Slot form for game {0} and block {1} due to session timeout or is not authenticated to server</log-message>
        <parameters>gameId,blockId</parameters>
        <category>ADMIN</category>
    </result>
</action>
