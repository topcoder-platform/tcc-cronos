<action name="PlayerAccountChangePassword" type="default" url-pattern="/server/player/myAccount-changePassword.do"
        priority="10">
    <handler type="SessionValidationHandler">
        <login_page_result>login</login_page_result>
    </handler>
    <handler type="ChangePasswordHandler">
    	<current_password_param>currPwd</current_password_param>
    	<new_password_param>newPwd</new_password_param>
    	<new_password_confirm_param>newPwdConfirm</new_password_confirm_param>
    	<object_factory_ns>com.orpheus.game.server.ObjectFactory</object_factory_ns>
    </handler>
    <handler type="authorization">
        <allowed_profile_types>
            <value>player</value>
        </allowed_profile_types>
        <failure_result>auth_failed</failure_result>
    </handler>
    <result name="auth_failed" type="dbLoggingForward">
        <forward-url>/public/authorizationError.jsp</forward-url>
        <log-message>attempted to view Player Account - Change Password page without PLAYER role assigned</log-message>
        <category>WEB SITE</category>
        <action-code>37</action-code>
    </result>
    <result name="success" type="dbLoggingForward">
        <forward-url>/WEB-INF/player/myaccount-changepassword.jsp</forward-url>
        <log-message>presented with Player Account - Change Password page</log-message>
        <category>WEB SITE</category>
        <action-code>126</action-code>
    </result>
    <result name="login" type="dbLoggingForward">
        <forward-url>/public/timeout.jsp</forward-url>
        <log-message>failed to open Player Account - Change Password page due to session timeout or is not authenticated
            to server
        </log-message>
        <category>WEB SITE</category>
        <action-code>58</action-code>
    </result>
</action>