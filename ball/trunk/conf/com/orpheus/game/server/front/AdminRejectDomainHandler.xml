<action name="DomainRejection" type="default" url-pattern="/server/admin/rejectDomain.do" priority="10">
    <handler type="SessionValidationHandler">
        <login_page_result>login</login_page_result>
    </handler>
    <handler type="authorization">
        <allowed_profile_types>
            <value>admin</value>
        </allowed_profile_types>
        <failure_result>auth_failed</failure_result>
    </handler>
    <handler type="form_validation">
        <form-name>rejectForm</form-name>
    </handler>
    <handler type="DomainRejection">
        <object-factory-ns>com.orpheus.game.server.ObjectFactory</object-factory-ns>
        <game-data-jndi-name>orpheus/GameData</game-data-jndi-name>
        <admin-data-jndi-name>orpheus/AdminData</admin-data-jndi-name>
        <domain-id-request-param>domainId</domain-id-request-param>
        <sponsor-id-request-param>sponsorId</sponsor-id-request-param>
        <fail-result>rejectDomainFailure</fail-result>
        <fail-request-attribute>failureHandlerResult</fail-request-attribute>
    </handler>
    <handler type="UserMessagePreHandler">
        <object_factory_ns>com.orpheus.game.server.ObjectFactory</object_factory_ns>
        <user-id-request-param>sponsorId</user-id-request-param>
        <template-file>com/orpheus/game/server/template/RejectDomainTemplate.txt</template-file>
        <message-subject>Sponsor Domain Rejected</message-subject>
        <reject-reason-param>rejectReason</reject-reason-param>
        <reject-message-param>rejectMessage</reject-message-param>
        <fail-result>messagePreHandlerFailure</fail-result>
        <fail-request-attribute>failureHandlerResult</fail-request-attribute>
    </handler>
    <handler type="UserMessageHandler">
        <messenger_plugin_key>OrpheusMessagePlugin</messenger_plugin_key>
        <message_param_keys>
            <value>subject</value>
            <value>to</value>
            <value>body</value>
            <value>from</value>
        </message_param_keys>
    </handler>
    <result name="rejectDomainFailure" type="loggingForward">
        <forward-url>/public/error.jsp</forward-url>
        <log-message>failed to reject domain {0} from sponsor {1} with reason {2} and message {3} due to unexpected error</log-message>
        <parameters>domainId,sponsorId,rejectReason,rejectMessage</parameters>
        <category>ADMIN</category>
    </result>
    <result name="success" type="loggingForward">
        <forward-url>/server/admin/pendingSponsors.do</forward-url>
        <log-message>rejected domain {0} from sponsor {1} with reason {2} and message {3}</log-message>
        <parameters>domainId,sponsorId,rejectReason,rejectMessage</parameters>
        <category>ADMIN</category>
    </result>
    <result name="auth_failed" type="loggingForward">
        <forward-url>/public/authorizationError.jsp</forward-url>
        <log-message>attempted to reject domain {0} from sponsor {1} with reason {2} and message {3} without ADMIN role assigned</log-message>
        <parameters>domainId,sponsorId,rejectReason,rejectMessage</parameters>
        <category>ADMIN</category>
    </result>
    <result name="validation-error" type="loggingForward">
        <forward-url>/WEB-INF/admin/reject-website.jsp</forward-url>
        <log-message>failed to pass validation for Reject Domain form for domain {0} from sponsor {1} with reason {2} and message {3}</log-message>
        <parameters>domainId,sponsorId,rejectReason,rejectMessage</parameters>
        <category>ADMIN</category>
    </result>
    <result name="messagePreHandlerFailure" type="loggingForward">
        <forward-url>/public/error.jsp</forward-url>
        <log-message>failed to send notifications after rejecting domain {0} from sponsor {1} with reason {2} and message {3} due to unexpected error</log-message>
        <parameters>domainId,sponsorId,rejectReason,rejectMessage</parameters>
    </result>
    <result name="login" type="loggingForward">
        <forward-url>/public/timeout.jsp</forward-url>
        <log-message>failed to reject domain {0} from sponsor {1} with reason {2} and message {3} due to session timeout or is not authenticated to server</log-message>
        <parameters>domainId,sponsorId,rejectReason,rejectMessage</parameters>
        <category>ADMIN</category>
    </result>
</action>
