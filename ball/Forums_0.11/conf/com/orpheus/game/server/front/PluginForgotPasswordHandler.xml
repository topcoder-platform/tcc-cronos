<action name="PluginForgotPassword" type="default" url-pattern="/server/plugin/retrievePassword.do" priority="10">
    <handler type="form_validation">
        <form-name>retrievePasswordForm</form-name>
    </handler>
    <handler type="forgot_password">
        <forgot_password_manager_ns>com.topcoder.forgotpassword.Orpheus</forgot_password_manager_ns>
        <forgot_password_name>OrpheusUserForgotPassword</forgot_password_name>
        <request_param_keys>
            <value>email</value>
        </request_param_keys>
        <forgot_pwd_keys>
            <value>email_address</value>
        </forgot_pwd_keys>
        <failure_result>validation_failed</failure_result>
    </handler>
    <result name="validation_failed" type="dbLoggingForward">
        <forward-url>/plugin/retrieve-password.jsp?notFound=true</forward-url>
        <log-message>failed to retrieve the password due to unknown email address {0}</log-message>
        <parameters>email</parameters>
        <action-code>77</action-code>
    </result>
    <result name="success" type="dbLoggingForward">
        <forward-url>/plugin/retrieve-password-confirmation.jsp</forward-url>
        <log-message>retrieved the password for email address {0}</log-message>
        <parameters>email</parameters>
        <action-code>144</action-code>
    </result>
    <result name="validation-error" type="dbLoggingForward">
        <forward-url>/plugin/retrieve-password.jsp</forward-url>
        <log-message>failed to pass the validation for the Retrieve Password form with email address {0}</log-message>
        <parameters>email</parameters>
        <action-code>67</action-code>
    </result>
</action>