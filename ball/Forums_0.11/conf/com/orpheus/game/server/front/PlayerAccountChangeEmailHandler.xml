<action name="PlayerAccountChangeEmail" type="default" url-pattern="/server/player/myAccount-changeEmail.do" priority="10">
    <handler type="SessionValidationHandler">
        <login_page_result>login</login_page_result>
    </handler>
    <handler type="authorization">
        <allowed_profile_types>
            <value>player</value>
        </allowed_profile_types>
        <failure_result>auth_failed</failure_result>
    </handler>
    <result name="auth_failed" type="loggingForward">
        <forward-url>/public/authorizationError.jsp</forward-url>
        <log-message>attempted to view Player Account - Change Email page without PLAYER role assigned</log-message>
        <category>WEB SITE</category>
    </result>
    <result name="success" type="loggingForward">
        <forward-url>/WEB-INF/player/myaccount-changeemail.jsp</forward-url>
        <log-message>presented with Player Account - Change Email page</log-message>
        <category>WEB SITE</category>
    </result>
    <result name="login" type="loggingForward">
        <forward-url>/public/timeout.jsp</forward-url>
        <log-message>failed to open Player Account - Change Email page due to session timeout or is not authenticated to server</log-message>
        <category>WEB SITE</category>
    </result>
</action>