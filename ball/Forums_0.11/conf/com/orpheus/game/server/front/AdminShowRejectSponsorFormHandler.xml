<action name="ShowRejectSponsorForm" type="default" url-pattern="/server/admin/showRejectSponsorForm.do" priority="10">
    <handler type="SessionValidationHandler">
        <login_page_result>login</login_page_result>
    </handler>
    <handler type="authorization">
        <allowed_profile_types>
            <value>admin</value>
        </allowed_profile_types>
        <failure_result>auth_failed</failure_result>
    </handler>
    <result name="success" type="loggingForward">
        <forward-url>/WEB-INF/admin/reject-sponsor.jsp</forward-url>
        <log-message>presented with Reject Sponsor form for sponsor {0}</log-message>
        <parameters>sponsorId</parameters>
        <category>ADMIN</category>
    </result>
    <result name="auth_failed" type="loggingForward">
        <forward-url>/public/authorizationError.jsp</forward-url>
        <log-message>attempted to view Reject Sponsor form for sponsor {0} without ADMIN role assigned</log-message>
        <parameters>sponsorId</parameters>
        <category>ADMIN</category>
    </result>
    <result name="login" type="loggingForward">
        <forward-url>/public/timeout.jsp</forward-url>
        <log-message>failed to view Reject Sponsor form for sponsor {0} due to session timeout or is not authenticated to server</log-message>
        <parameters>sponsorId</parameters>
        <category>ADMIN</category>
    </result>
</action>
