<action name="OpenAuctions" type="default" url-pattern="/server/sponsor/openAuctions.do" priority="10">
    <handler type="SessionValidationHandler">
        <login_page_result>login</login_page_result>
    </handler>
    <handler type="authorization">
        <allowed_profile_types>
            <value>sponsor</value>
        </allowed_profile_types>
        <failure_result>auth_failed</failure_result>
    </handler>
    <handler type="OpenAuctions">
        <open_auction_key>auctions</open_auction_key>
    </handler>
    <handler type="SponsorAuctionsHandler">
        <games_key>games</games_key>
        <auctions_request_attr_key>auctions</auctions_request_attr_key>
        <game_data_jndi_name>orpheus/GameData</game_data_jndi_name>
        <jndi_context_name>default</jndi_context_name>
        <use_remote_interface>true</use_remote_interface>
    </handler>
    <handler type="SponsorLeadingBidsHandler">
        <games_key>games</games_key>
        <leading_bids_key>leadingBidsMap</leading_bids_key>
    </handler>
    <result name="success" type="dbLoggingForward">
        <forward-url>/WEB-INF/sponsor/auctions.jsp</forward-url>
        <log-message>presented with list of open auctions</log-message>
        <category>AUCTION</category>
        <action-code>137</action-code>
    </result>
    <result name="auth_failed" type="dbLoggingForward">
        <forward-url>/public/authorizationError.jsp</forward-url>
        <log-message>attempted to view Open Auctions page without SPONSOR role assigned</log-message>
        <category>AUCTION</category>
        <action-code>32</action-code>
    </result>
    <result name="login" type="dbLoggingForward">
        <forward-url>/public/timeout.jsp</forward-url>
        <log-message>failed to open Open Auctions page due to session timeout or is not authenticated to server
        </log-message>
        <category>AUCTION</category>
        <action-code>56</action-code>
    </result>
</action>