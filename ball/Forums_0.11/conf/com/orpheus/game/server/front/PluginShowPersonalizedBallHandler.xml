<action name="ShowPersonalizedBall" type="default" url-pattern="/server/plugin/showPesonalizedBall.do" priority="10">
    <handler type="SessionValidationHandler">
        <login_page_result>login</login_page_result>
    </handler>
    <handler type="authorization">
        <allowed_profile_types>
            <value>player</value>
        </allowed_profile_types>
        <failure_result>auth_failed</failure_result>
    </handler>
    <handler type="PersonalizedBallHandler">
        <game_id_param_key>gameId</game_id_param_key>
        <game_detail_key>game</game_detail_key>
        <slot_completions_key>completedSlots</slot_completions_key>
        <game_data_jndi_name>orpheus/GameData</game_data_jndi_name>
        <jndi_context_name>default</jndi_context_name>
        <use_remote_interface>true</use_remote_interface>
    </handler>
    <result name="success" type="loggingForward">
        <forward-url>/WEB-INF/plugin/player-ball.jsp</forward-url>
        <log-message>presented with Personalized Ball page for game {0}</log-message>
        <parameters>gameId</parameters>
    </result>
    <result name="auth_failed" type="loggingForward">
        <forward-url>/public/authorizationError.jsp</forward-url>
        <log-message>attempted to view Personalized Ball page for game {0} without PLAYER role assigned</log-message>
        <parameters>gameId</parameters>
    </result>
    <result name="login" type="loggingForward">
        <forward-url>/public/timeout.jsp</forward-url>
        <log-message>failed to open Personalized Ball page for gane {0} due to session timeout or is not authenticated to server
        </log-message>
        <parameters>gameId</parameters>
    </result>
</action>