<action name="PendingWinners" type="default" url-pattern="/server/admin/pendingWinners.do" priority="10">
    <handler type="SessionValidationHandler">
        <login_page_result>login</login_page_result>
    </handler>
    <handler type="authorization">
        <allowed_profile_types>
            <value>admin</value>
        </allowed_profile_types>
        <failure_result>auth_failed</failure_result>
    </handler>
    <handler type="PendingWinners">
        <admin-data-jndi-name>orpheus/AdminData</admin-data-jndi-name>
        <pending-winner-request-attribute>pendingWinners</pending-winner-request-attribute>
        <fail-result>pendingWinnersFailure</fail-result>
        <fail-request-attribute>failureHandlerResult</fail-request-attribute>
    </handler>
    <handler type="AdminPendingWinnersHandler">
        <games_key>games</games_key>
        <profiles_key>winnerProfiles</profiles_key>
        <pending_winners_key>pendingWinners</pending_winners_key>
        <slot_completions_key>slotCompletions</slot_completions_key>
        <game_data_jndi_name>orpheus/GameData</game_data_jndi_name>
        <object_factory_ns>com.orpheus.game.server.ObjectFactory</object_factory_ns>
        <jndi_context_name>default</jndi_context_name>
        <use_remote_interface>true</use_remote_interface>
    </handler>
    <result name="pendingWinnersFailure" type="loggingForward">
        <forward-url>/public/error.jsp</forward-url>
        <log-message>failed to view the list of unapproved winners due to unexpected error</log-message>
        <category>ADMIN</category>
    </result>
    <result name="success" type="loggingForward">
        <forward-url>/WEB-INF/admin/winners.jsp</forward-url>
        <log-message>presented with the list of unapproved winners</log-message>
        <category>ADMIN</category>
    </result>
    <result name="auth_failed" type="loggingForward">
        <forward-url>/public/authorizationError.jsp</forward-url>
        <log-message>attempted to view the list of unapproved winners without ADMIN role assigned</log-message>
        <category>ADMIN</category>
    </result>
    <result name="login" type="loggingForward">
        <forward-url>/public/timeout.jsp</forward-url>
        <log-message>failed to view the list of unapproved winners due to session timeout or is not authenticated to server</log-message>
        <category>ADMIN</category>
    </result>
</action>
