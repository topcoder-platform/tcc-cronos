<action name="PluginDomainBrainteaser" type="default" url-pattern="/server/plugin/brainteaser.do" priority="10">
    <handler type="SessionValidationHandler">
        <login_page_result>login</login_page_result>
    </handler>
    <handler type="authorization">
        <allowed_profile_types>
            <value>player</value>
        </allowed_profile_types>
        <failure_result>auth_failed</failure_result>
    </handler>
    <handler type="PlayerGameAuthorizationHandler">
        <game_id_param_key>gameId</game_id_param_key>
        <game_play_key>gamePlayInfo</game_play_key>
        <game_registration_post_url_key>gameRegistrationPostURL</game_registration_post_url_key>
        <raise_error>false</raise_error>
        <game_data_jndi_name>orpheus/GameData</game_data_jndi_name>
        <jndi_context_name>default</jndi_context_name>
        <use_remote_interface>true</use_remote_interface>
        <game_rules_result>gameRules</game_rules_result>
    </handler>
    <handler type="ShowBrainteaserHandler">
        <game_id_param_key>gameId</game_id_param_key>
        <domain_param_key>domain</domain_param_key>
        <game_data_jndi_name>orpheus/GameData</game_data_jndi_name>
        <jndi_context_name>default</jndi_context_name>
        <use_remote_interface>true</use_remote_interface>
        <puzzle_id_request_attribute_key>puzzleId</puzzle_id_request_attribute_key>
        <media_type_request_attribute_key>mediaType</media_type_request_attribute_key>
        <media_type>DHTML</media_type>
        <game_play_key>gamePlayInfo</game_play_key>
        <solutiontester_base_name>puzzleSolutionTester</solutiontester_base_name>
    </handler>
    <handler type="PuzzleRenderingHandler">
        <puzzle_id_request_attribute_key>puzzleId</puzzle_id_request_attribute_key>
        <media_type_request_attribute_key>mediaType</media_type_request_attribute_key>
        <puzzle_string_request_attribute_key>puzzle</puzzle_string_request_attribute_key>
        <solutiontester_base_name>puzzleSolutionTester</solutiontester_base_name>
    </handler>
    <result name="success" type="dbLoggingForward">
        <forward-url>/WEB-INF/plugin/brainteaser.jsp</forward-url>
        <log-message>presented with brainteaser for game {0} and domain {1}</log-message>
        <parameters>gameId,domain</parameters>
        <action-code>132</action-code>
    </result>
    <result name="auth_failed" type="dbLoggingForward">
        <forward-url>/public/authorizationError.jsp</forward-url>
        <log-message>attempted to view brainteaser for game {0} and domain {1} without PLAYER role assigned
        </log-message>
        <parameters>gameId,domain</parameters>
        <action-code>43</action-code>
    </result>
    <result name="login" type="dbLoggingForward">
        <forward-url>/plugin/timeout.jsp</forward-url>
        <log-message>failed to view brainteaser for game {0} and domain {1} due to session timeout or is not
            authenticated to server
        </log-message>
        <parameters>gameId,domain</parameters>
        <action-code>95</action-code>
    </result>
    <result name="gameRules" type="dbLoggingForward">
        <forward-url>/server/plugin/startGameJoin.do</forward-url>
        <log-message>is not registered to game {0} for domain {1} while attempting to view brainteaser</log-message>
        <parameters>gameId,domain</parameters>
        <action-code>110</action-code>
    </result>
</action>