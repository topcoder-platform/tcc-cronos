<action name="PendingDomain" type="default" url-pattern="/server/admin/pendingDomain.do" priority="10">
    <handler type="SessionValidationHandler">
        <login_page_result>login</login_page_result>
    </handler>
    <handler type="authorization">
        <allowed_profile_types>
            <value>admin</value>
        </allowed_profile_types>
        <failure_result>auth_failed</failure_result>
    </handler>
    <handler type="PendingDomain">
        <object-factory-ns>com.orpheus.game.server.ObjectFactory</object-factory-ns>
        <game-data-jndi-name>orpheus/GameData</game-data-jndi-name>
        <domain-id-request-param>domainId</domain-id-request-param>
        <domain-request-attribute>domain</domain-request-attribute>
        <sponsor-request-attribute>sponsor</sponsor-request-attribute>
        <fail-result>pendingDomainFailure</fail-result>
        <fail-request-attribute>failureHandlerResult</fail-request-attribute>
    </handler>
    <result name="pendingDomainFailure" type="loggingForward">
        <forward-url>/public/error.jsp</forward-url>
        <log-message>failed to view details for unapproved domain {0} due to unexpected error</log-message>
        <parameters>domainId</parameters>
        <category>ADMIN</category>
    </result>
    <result name="success" type="loggingForward">
        <forward-url>/WEB-INF/admin/view-domain.jsp</forward-url>
        <log-message>presented with details for unapproved domain {0}</log-message>
        <parameters>domainId</parameters>
        <category>ADMIN</category>
    </result>
    <result name="auth_failed" type="loggingForward">
        <forward-url>/public/authorizationError.jsp</forward-url>
        <log-message>attempted to view details for unapproved domain {0} without ADMIN role assigned</log-message>
        <parameters>domainId</parameters>
        <category>ADMIN</category>
    </result>
    <result name="login" type="loggingForward">
        <forward-url>/public/timeout.jsp</forward-url>
        <log-message>failed to view details for unapproved domain {0} due to session timeout or is not authenticated to server</log-message>
        <parameters>domainId</parameters>
        <category>ADMIN</category>
    </result>
</action>
