<action name="StartGameCreation" type="default" url-pattern="/server/admin/finishGameCreation.do" priority="10">
    <handler type="SessionValidationHandler">
        <login_page_result>login</login_page_result>
    </handler>
    <!-- TODO : Add form validation logic -->
    <handler type="authorization">
        <allowed_profile_types>
            <value>admin</value>
        </allowed_profile_types>
        <failure_result>auth_failed</failure_result>
    </handler>
    <handler type="CreateGame">
        <game-data-jndi-name>orpheus/GameData</game-data-jndi-name>
        <block-request-param>blockInfo</block-request-param>
        <max-slot-time-prop>maxBlockTime</max-slot-time-prop>
        <slot-count-prop>slotCount</slot-count-prop>
        <auction-start-time-prop>auctionStartTime</auction-start-time-prop>
        <auction-end-time-prop>auctionEndTime</auction-end-time-prop>
        <ballcolor-id-session-attr>colorId</ballcolor-id-session-attr>
        <key-count-session-attr>keyCount</key-count-session-attr>
        <block-count-session-attr>blockCount</block-count-session-attr>
        <date-format-request-param>dateFormat</date-format-request-param>
        <start-date-session-attr>startDate</start-date-session-attr>
        <auction-mgr-app-attr>OrpheusAuctionManager</auction-mgr-app-attr>
        <minimum-auction-bid>5</minimum-auction-bid>
        <fail-result>createGameFailure</fail-result>
        <fail-request-attribute>failureHandlerResult</fail-request-attribute>
    </handler>
    <result name="createGameFailure" type="loggingForward">
        <forward-url>/public/error.jsp</forward-url>
        <log-message>failed to create new game with blocks {0} due to unexpected error</log-message>
        <parameters>blockInfo</parameters>
        <category>ADMIN</category>
    </result>
    <result name="success" type="loggingForward">
        <forward-url>/WEB-INF/admin/games-new-step3.jsp</forward-url>
        <log-message>created new game with blocks {0}</log-message>
        <parameters>blockInfo</parameters>
        <category>ADMIN</category>
    </result>
    <result name="auth_failed" type="loggingForward">
        <forward-url>/public/authorizationError.jsp</forward-url>
        <log-message>attempted to create new game with blocks {0} without ADMIN role assigned</log-message>
        <parameters>blockInfo</parameters>
        <category>ADMIN</category>
    </result>
    <result name="login" type="loggingForward">
        <forward-url>/public/timeout.jsp</forward-url>
        <log-message>failed to create new game with blocks {0} due to session timeout or is not authenticated to server</log-message>
        <parameters>blockInfo</parameters>
        <category>ADMIN</category>
    </result>
</action>
