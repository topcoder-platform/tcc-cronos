<action name="PlayerActiveGames" type="default" url-pattern="/server/player/activeGames.do" priority="10">
    <handler type="SessionValidationHandler">
        <login_page_result>login</login_page_result>
    </handler>
    <handler type="authorization">
        <allowed_profile_types>
            <value>player</value>
        </allowed_profile_types>
        <failure_result>auth_failed</failure_result>
    </handler>
    <handler type="active_games">
        <games_key>pendingGames</games_key>
    </handler>
    <handler type="user_games">
        <games_key>playerRegisteredGames</games_key>
        <not_logged_in_result_code>not_logged_in</not_logged_in_result_code>
    </handler>
    <result name="auth_failed" type="dbLoggingForward">
        <forward-url>/public/authorizationError.jsp</forward-url>
        <log-message>attempted to view Active Games page without PLAYER role assigned</log-message>
        <category>WEB SITE</category>
        <action-code>26</action-code>
    </result>
    <result name="not_logged_in" type="dbLoggingForward">
        <forward-url>/public/login.jsp</forward-url>
        <log-message>attempted to view Active Games page without logging to server</log-message>
        <category>WEB SITE</category>
        <action-code>27</action-code>
    </result>
    <result name="success" type="dbLoggingForward">
        <forward-url>/WEB-INF/player/active.jsp</forward-url>
        <log-message>presented with Active Games page</log-message>
        <category>WEB SITE</category>
        <action-code>117</action-code>
    </result>
    <result name="login" type="dbLoggingForward">
        <forward-url>/public/timeout.jsp</forward-url>
        <log-message>failed to open Active Games page due to session timeout or is not authenticated to server
        </log-message>
        <category>WEB SITE</category>
        <action-code>55</action-code>
    </result>
</action>