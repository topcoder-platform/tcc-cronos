<action name="Welcome" type="default" url-pattern="/server/welcome.do" priority="10">
    <handler type="SessionValidationHandler">
        <login_page_result>login</login_page_result>
    </handler>
    <handler type="authorization">
        <allowed_profile_types>
            <value>player</value>
            <value>sponsor</value>
            <value>admin</value>
        </allowed_profile_types>
        <failure_result>auth_failed</failure_result>
    </handler>
    <handler type="welcome_page">
        <profile_types>
            <value>player</value>
            <value>sponsor</value>
            <value>admin</value>
        </profile_types>

        <results>
            <value>player_result</value>
            <value>sponsor_result</value>
            <value>admin_result</value>
        </results>
    </handler>
    <result name="player_result" type="dbLoggingForward">
        <forward-url>/server/player/activeGames.do</forward-url>
        <log-message>presented with Player Home page</log-message>
        <category>WEB SITE</category>
        <action-code>129</action-code>
    </result>
    <result name="sponsor_result" type="dbLoggingForward">
        <forward-url>/server/sponsor/openAuctions.do</forward-url>
        <log-message>presented with Sponsor Home page</log-message>
        <category>WEB SITE</category>
        <action-code>130</action-code>
    </result>
    <result name="admin_result" type="dbLoggingForward">
        <forward-url>/server/admin/summary.do</forward-url>
        <log-message>presented with Admin Home page</log-message>
        <category>WEB SITE</category>
        <action-code>118</action-code>
    </result>
    <result name="success" type="dbLoggingForward">
        <forward-url>/public/index.jsp</forward-url>
        <log-message>ERROR IN APPLICATION'S LOGIC. Presented with Main Home page - SHOULD NOT REACH THIS FORWARD !!!
        </log-message>
        <category>WEB SITE</category>
        <action-code>3</action-code>
    </result>
    <result name="auth_failed" type="dbLoggingForward">
        <forward-url>/public/authorizationError.jsp</forward-url>
        <log-message>attempted to view Home page without any of supported roles assigned</log-message>
        <category>WEB SITE</category>
        <action-code>31</action-code>
    </result>
    <result name="login" type="dbLoggingForward">
        <forward-url>/public/timeout.jsp</forward-url>
        <log-message>failed to view Home page due to session timeout or is not authenticated to server</log-message>
        <category>WEB SITE</category>
        <action-code>91</action-code>
    </result>
</action>
