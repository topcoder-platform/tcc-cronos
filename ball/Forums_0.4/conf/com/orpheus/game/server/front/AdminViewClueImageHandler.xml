<action name="ViewClueImage" type="default" url-pattern="/server/admin/viewClueImage.do" priority="10">
    <handler type="SessionValidationHandler">
        <login_page_result>login</login_page_result>
    </handler>
    <handler type="authorization">
        <allowed_profile_types>
            <value>admin</value>
        </allowed_profile_types>
        <failure_result>auth_failed</failure_result>
    </handler>
    <result name="success" type="loggingForward">
        <forward-url>/WEB-INF/admin/view-clueImage.jsp</forward-url>
        <log-message>presented with clue image for target {0} of slot {1} and game {2}</log-message>
        <parameters>target,slotId,gameId</parameters>
        <category>ADMIN</category>
    </result>
    <result name="auth_failed" type="loggingForward">
        <forward-url>/public/authorizationError.jsp</forward-url>
        <log-message>attempted to view clue image for target {0} of slot {1} and game {2} without ADMIN role assigned</log-message>
        <parameters>target,slotId,gameId</parameters>
        <category>ADMIN</category>
    </result>
    <result name="login" type="loggingForward">
        <forward-url>/public/timeout.jsp</forward-url>
        <log-message>failed to view clue image for target {0} of slot {1} and game {2} due to session timeout or is not authenticated to server</log-message>
        <parameters>target,slotId,gameId</parameters>
        <category>ADMIN</category>
    </result>
</action>
