<action name="ReportOverall" type="default" url-pattern="/server/admin/report/overall.do" priority="10">
    <handler type="SessionValidationHandler">
        <login_page_result>login</login_page_result>
    </handler>
    <handler type="authorization">
        <allowed_profile_types>
            <value>admin</value>
        </allowed_profile_types>
        <failure_result>auth_failed</failure_result>
    </handler>
    <handler type="OverallGameReportHandler">
        <object_factory_ns>com.orpheus.game.server.ObjectFactory</object_factory_ns>
        <game_data_jndi_name>orpheus/GameData</game_data_jndi_name>
        <jndi_context_name>default</jndi_context_name>
        <use_remote_interface>true</use_remote_interface>
    </handler>
    <result name="success" type="dbLoggingForward">
        <forward-url>/WEB-INF/admin/report/overall.jsp</forward-url>
        <log-message>presented with Overall Games Report</log-message>
        <category>ADMIN</category>
        <action-code>123</action-code>
    </result>
    <result name="auth_failed" type="dbLoggingForward">
        <forward-url>/public/authorizationError.jsp</forward-url>
        <log-message>attempted to view Overall Games Report without ADMIN role assigned</log-message>
        <category>ADMIN</category>
        <action-code>33</action-code>
    </result>
    <result name="login" type="dbLoggingForward">
        <forward-url>/public/timeout.jsp</forward-url>
        <log-message>failed to view Overall Games Report due to session timeout or is not authenticated to server
        </log-message>
        <category>ADMIN</category>
        <action-code>92</action-code>
    </result>
</action>