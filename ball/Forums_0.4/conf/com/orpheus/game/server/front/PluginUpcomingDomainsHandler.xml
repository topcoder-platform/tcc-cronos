<action name="PluginUpcomingDomains" type="default" url-pattern="/server/plugin/upcomingDomains.do" priority="10">
    <handler type="SessionValidationHandler">
        <login_page_result>login</login_page_result>
    </handler>
    <handler type="authorization">
        <allowed_profile_types>
            <value>player</value>
        </allowed_profile_types>
        <failure_result>auth_failed</failure_result>
    </handler>
    <handler type="upcoming_domains">
        <game_id_param_key>gameId</game_id_param_key>
        <domains_key>upcomingDomains</domains_key>
    </handler>
    <handler type="game_detail">
        <game_id_param_key>gameId</game_id_param_key>
        <game_detail_key>game</game_detail_key>
    </handler>
    <result name="success" type="dbLoggingForward">
        <forward-url>/WEB-INF/plugin/upcoming.jsp</forward-url>
        <log-message>presented with list of upcoming domains for game {0}</log-message>
        <parameters>gameId</parameters>
        <action-code>139</action-code>
    </result>
    <result name="auth_failed" type="dbLoggingForward">
        <forward-url>/public/authorizationError.jsp</forward-url>
        <log-message>attempted to view list of upcoming domains for game {0} without PLAYER role assigned</log-message>
        <parameters>gameId</parameters>
        <action-code>47</action-code>
    </result>
    <result name="login" type="dbLoggingForward">
        <forward-url>/plugin/timeout.jsp</forward-url>
        <log-message>failed to view list of upcoming domains for game {0} due to session timeout or is not authenticated
            to server
        </log-message>
        <parameters>gameId</parameters>
        <action-code>101</action-code>
    </result>
</action>