      </Property>

      <Property name="FILTER_PROJECT_EMPLOYEE_EXPENSE">
         <Value>PR.NAME = ?</Value>
      </Property>

      <Property name="FILTER_BILLABLE_EMPLOYEE_EXPENSE">
