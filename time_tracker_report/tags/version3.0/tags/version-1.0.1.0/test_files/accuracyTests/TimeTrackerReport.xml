      <Property name="BASE_QUERY_PROJECT_EXPENSE">
         <Value>
            SELECT EE.ENTRYDATE DATE,
                   EE.CREATIONUSER EMPLOYEE,
                   CL.NAME CLIENT,
                   PR.NAME PROJECT,
                   ET.DESCRIPTION TYPE,
