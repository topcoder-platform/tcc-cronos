              FROM EXPENSEENTRIES EE,
                   CLIENTS CL,
                   PROJECTEXPENSES PE,
                   PROJECTS PR,
                   CLIENTPROJECTS CP
            
             WHERE PE.EXPENSEENTRIESID = EE.EXPENSEENTRIESID
               AND PE.PROJECTSID = PR.PROJECTSID
