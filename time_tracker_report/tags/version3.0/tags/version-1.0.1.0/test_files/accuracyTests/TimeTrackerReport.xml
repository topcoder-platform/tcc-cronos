      </Property>

      <Property name="FILTER_CLIENT_CLIENT_TIME">
         <Value>CL.NAME = ?</Value>
      </Property> 

      <Property name="FILTER_DATE_CLIENT_TIME">
         <Value>TE.ENTRYDATE BETWEEN ? AND ?</Value>
      </Property>

      <Property name="FILTER_BILLABLE_CLIENT_TIME">
         <Value>TE.BILLABLE = ?</Value>
      </Property>


