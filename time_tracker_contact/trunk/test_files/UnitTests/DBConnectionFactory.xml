<CMConfig>


   <Config name="com.topcoder.db.connectionfactory.DBConnectionFactoryImpl">

		<Property name="connections">

		    <!-- The default is InformixJNDIConnection-->
			<Property name="default">
				<Value>InformixJNDIConnection</Value>
			</Property>

		    <!-- The JNDIConnection will be used by EJB/DAO to access database-->
			<Property name="InformixJNDIConnection">
				<Property name="producer">
					<Value>com.topcoder.db.connectionfactory.producers.JNDIConnectionProducer</Value>
				</Property>
				<Property name="parameters">
					<Property name="jndi_name">
						<Value>java:comp/env/jdbc/informix</Value>
					</Property>
				</Property>
			</Property>

			<!-- The JDBCConnection will be used by UnitTests-->
			<Property name="InformixJDBCConnection">
				<Property name="producer">
					<Value>com.topcoder.db.connectionfactory.producers.JDBCConnectionProducer</Value>
				</Property>
				<Property name="parameters">
					<Property name="jdbc_driver">
						<Value>com.informix.jdbc.IfxDriver</Value>
					</Property>
					<Property name="jdbc_url">
						<Value>jdbc:informix-sqli://192.168.0.155:1526/tcs:informixserver=yux</Value>
					</Property>
					<Property name="user">
						<Value>informix</Value>
					</Property>
					<Property name="password">
						<Value>123</Value>
					</Property>
				</Property>
			</Property>

    	</Property>
	</Config>

</CMConfig>