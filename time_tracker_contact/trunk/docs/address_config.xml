			<Property name="params">
				<Property name="param1">
					<Property name="type">
						<Value>String</Value>
					</Property>
					<Property name="value">
						<Value>DBSearchStrategy</Value>
					</Property>
				</Property>
			</Property>
		</Property>
	</Config>
</CMConfig>
