			<Value>com.topcoder.timetracker.contact.persistence.SearchBundleManager</Value>
		</Property>
	</Config>
	
	<Config name="com.topcoder.timetracker.contact.persistence.ConnectionFactory">
		<Property name="connections">
			<Property name="default">
				<Value>InformixJDBCConnection</Value>
			</Property>

			<Property name=" InformixJDBCConnection ">
				<Property name="producer">
					<Value>com.topcoder.db.connectionfactory.producers.JDBCConnectionProducer</Value>
				</Property>
				<Property name="parameters">
					<Property name="jdbc_driver">
						<Value>com.informix.jdbc.IfxDriver</Value>
					</Property>
					<Property name="jdbc_url">
						<Value> jdbc:informix-sqli://¡­¡­¡­</Value>
					</Property>
					<Property name="user">
						<Value>user_name</Value>
					</Property>
					<Property name="password">
						<Value>password</Value>
					</Property>
				</Property>
			</Property>
		</Property>
	</Config>

	<Config name="com.topcoder.timetracker.contact.persistence.SearchBundleManager">
		<Property name="searchStrategyFactoryNamespace">
			<Value>com.topcoder.search.builder.strategy.factory</Value>
		</Property>
			
		<Property name="fieldValidatorFactoryNamespace">
			<Value>com.topcoder.search.builder.validator.factory</Value>
		</Property>

		<Property name="searchBundles">
			<Property name="AddressSearch">
				<Property name="searchStrategy">
					<Property name="class">
						<Value>dbStrategy</Value>
					</Property>
				</Property>
				<Property name="context">
					<Value>Select address.*, state_name.*, country_name.* from address, address_relation, state_name, country_name where address.state_name_id = state_name.state_name_id AND address.country_name_id = country_name.country_name_id AND </Value>
				</Property>
				<Property name="alias">
					<Property name="creation_date">
						<Value>address.creation_date</Value>
					</Property>
					<Property name="entity_id">
						<Value>address_relation.entity_id</Value>
					</Property>
					<Property name="state_name">
						<Value>state_name.name</Value>
					</Property>
					... ...
				</Property>
				<Property name="searchableFields">
				</Property>
			</Property>
		</Property>
	</Config>

<Config name="com.topcoder.search.builder.validator.factory">
		<Property name="validator:default">
			<Property name="type">
