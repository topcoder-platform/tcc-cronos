<project name="Dependency Import" default="dist" basedir=".">
	<!-- property file defining the component's dependencies -->

	<!-- Properties used in compile_targets ANT target for JDK version x -->
	<property name="component.target" value="1.5" />
	<property name="component.bootclasspath" value="${java_1_5_bootclasspath}" />

	<!-- TCS dependencies -->
	<property name="configmanager.jar" value="${tcs_libdir}/configuration_manager/2.1.5/configuration_manager.jar" />
	<property name="search_builder.jar" value="${tcs_libdir}/search_builder/1.3.1/search_builder.jar" />
	<property name="database_abstraction.jar" value="${tcs_libdir}/database_abstraction/1.1/database_abstraction.jar" />
	<property name="db_connection_factory.jar" value="${tcs_libdir}/db_connection_factory/1.0/db_connection_factory.jar" />
	<property name="id_generator.jar" value="${tcs_libdir}/id_generator/3.0/id_generator.jar" />
	<property name="logging_wrapper.jar" value="${tcs_libdir}/logging_wrapper/1.2/logging_wrapper.jar" />
	<property name="object_factory.jar" value="${tcs_libdir}/object_factory/2.0/object_factory.jar" />
	<property name="resource_management.jar" value="${tcs_libdir}/resource_management/1.1/resource_management.jar" />
	<property name="base_exception.jar" value="${tcs_libdir}/base_exception/1.0/base_exception.jar" />
    <property name="typesafe_enum.jar" value="${tcs_libdir}/typesafe_enum/1.1.0/typesafe_enum.jar"/>
    <property name="object_formatter.jar" value="${tcs_libdir}/object_formatter/1.0.0/object_formatter.jar"/>
    <property name="configuration_api.jar" value="${tcs_libdir}/configuration_api/1.0.0/configuration_api.jar"/>

    <!-- 3rd Party Dependencies  -->
    <property name="junit.jar" value="${ext_libdir}/junit/3.8.2/junit.jar"/>
    <property name="javaee.jar" value="${ext_libdir}/javaee/javaee.jar"/>
    <property name="ifxjdbc.jar" value="${ext_libdir}/informix/1.4.1/ifxjdbc.jar"/>


	<path id="component.tcs-dependencies">
		<pathelement location="${configmanager.jar}" />
		<pathelement location="${search_builder.jar}" />
		<pathelement location="${database_abstraction.jar}" />
		<pathelement location="${db_connection_factory.jar}" />
		<pathelement location="${id_generator.jar}" />
		<pathelement location="${logging_wrapper.jar}" />
		<pathelement location="${object_factory.jar}" />
		<pathelement location="${resource_management.jar}" />
		<pathelement location="${base_exception.jar}" />
		<pathelement location="${typesafe_enum.jar}" />
		<pathelement location="${object_formatter.jar}" />
		<pathelement location="${configuration_api.jar}" />
	</path>

	<path id="component.3rdParty-dependencies">
		<pathelement location="${ifxjdbc.jar}" />
		<pathelement location="${javaee.jar}" />
	</path>

	<path id="component.test.3rdParty-dependencies">
		<pathelement location="${junit.jar}" />
	</path>

</project>