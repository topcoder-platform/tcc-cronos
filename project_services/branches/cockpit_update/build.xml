	</path>
	<taskdef classpathref="cobertura.classpath" resource="tasks.properties" />
	<property name="cobertura.datafile" value="${testlogdir}/cobertura.ser" />
	<property name="instrumented.dir" value="${builddir}/instrumented" />
		    
  <!-- TCS Dependencies -->
