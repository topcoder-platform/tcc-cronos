<?xml version="1.0" encoding="ISO-8859-1"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
         http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd"
         version="2.1">

 <enterprise-beans>
	<session>
     <ejb-name>GameDataEJB</ejb-name>
     <home>com.orpheus.game.persistence.GameDataHome</home>
     <remote>com.orpheus.game.persistence.GameData</remote>
      <local-home>com.orpheus.game.persistence.GameDataLocalHome</local-home>
      <local>com.orpheus.game.persistence.GameDataLocal</local>
     <ejb-class>com.orpheus.game.persistence.ejb.GameDataBean</ejb-class>
     <session-type>Stateless</session-type>
     <transaction-type>Container</transaction-type>
	</session>
	 <session>
            <description>TCS JUnit Session Bean Test Runner</description>
            <ejb-name>TCS_Game_EJBTestRunnerEJB</ejb-name>
            <home>net.sourceforge.junitejb.EJBTestRunnerHome</home>
            <remote>net.sourceforge.junitejb.EJBTestRunner</remote>
            <ejb-class>com.orpheus.game.persistence.TCSEJBTestRunnerBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Bean</transaction-type>
            <ejb-local-ref>
                <ejb-ref-name>ejb/game/GameDataEJB</ejb-ref-name>
                <ejb-ref-type>Session</ejb-ref-type>
                <local-home>com.orpheus.game.persistence.GameDataLocalHome</local-home>
                <local>com.orpheus.game.persistence.GameDataLocal</local>
                <ejb-link>GameDataEJB</ejb-link>
            </ejb-local-ref>
        </session>
        
 </enterprise-beans>

 <assembly-descriptor>

   <container-transaction>
     <method>
        <ejb-name>GameDataEJB</ejb-name>
        <method-name>*</method-name>
     </method>
     <trans-attribute>Required</trans-attribute>
   </container-transaction>

 </assembly-descriptor>

</ejb-jar>
