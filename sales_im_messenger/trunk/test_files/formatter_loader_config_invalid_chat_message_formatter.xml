<?xml version="1.0"?>
<CMConfig>
	<!--
		This namespace holds user_name and role_name_key properties
		read by FormatterLoader class.
	-->
	<Config name="com.cronos.im.messenger.FormatterLoader">
		<Property name="user_name_key">
			<Value>user_name</Value>
		</Property>
		<Property name="role_name_key">
			<Value>manager</Value>
		</Property>
	</Config>
	<!-- This is the namespace a chat message formatter for the role "manager" 
		 which is invalid because the value of 
		 chat_text_format.chat_text_dynamic_format doesn't exist and it is
		 required.
	-->
	<Config name="com.cronos.im.messenger.FormatterLoader.manager">
	    <!-- format attributes for user name -->
		<Property name="user_name_format">
			<Property name="face">
				<Value>Arial</Value>
			</Property>
			<Property name="size">
				<Value>5</Value>
			</Property>
			<Property name="color">
				<Value>#2248</Value>
			</Property>
		</Property>
        <!-- format attributes for timstamp -->
		<Property name="timestamp_format">
			<Property name="face">
				<Value>Arial</Value>
			</Property>
			<Property name="size">
				<Value>5</Value>
			</Property>
			<Property name="color">
				<Value>#2248</Value>
			</Property>
		</Property>

        <!-- format attributes for chat text -->
		<Property name="chat_text_format">
		    <Property name="chat_text_static_format">
				<Property name="face">
					<Value>Arial</Value>
				</Property>
				<Property name="size">
					<Value>5</Value>
				</Property>
				<Property name="color">
					<Value>#2248</Value>
				</Property>
			</Property>

			<Property name="chat_text_dynamic_format">
			    <!--
			    	The value of this property used as pattern does not exist
			    	and so the creation of the ChatMessageFormatter instance
			    	should fail.
			    -->
				<Property name="href">
					<Value>$1</Value>
				</Property>
			</Property>
		</Property>
	</Config>
</CMConfig>