<?xml version="1.0" encoding="ISO-8859-1"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
         http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd"
         version="2.1">

 <enterprise-beans>
	<session>
     <ejb-name>AdminDataEJB</ejb-name>
     <home>com.orpheus.administration.persistence.AdminDataHome</home>
     <remote>com.orpheus.administration.persistence.AdminData</remote>
      <local-home>com.orpheus.administration.persistence.AdminDataLocalHome</local-home>
      <local>com.orpheus.administration.persistence.AdminDataLocal</local>
     <ejb-class>com.orpheus.administration.persistence.AdminDataBean</ejb-class>
     <session-type>Stateless</session-type>
     <transaction-type>Container</transaction-type>
	</session>
 </enterprise-beans>

  <enterprise-beans>
	<session>
     <ejb-name>MessageEJB</ejb-name>
     <home>com.orpheus.administration.persistence.MessageRemoteHome</home>
     <remote>com.orpheus.administration.persistence.Messageemote</remote>
      <local-home>com.orpheus.administration.persistence.MessageLocalHome</local-home>
      <local>com.orpheus.administration.persistence.Messageocal</local>
     <ejb-class>com.orpheus.administration.persistence.MessageBean</ejb-class>
     <session-type>Stateless</session-type>
     <transaction-type>Container</transaction-type>
	</session>
 </enterprise-beans>

 <assembly-descriptor>

   <container-transaction>
     <method>
        <ejb-name>AdminDataEJB</ejb-name>
        <method-name>*</method-name>
     </method>
     <trans-attribute>Required</trans-attribute>
   </container-transaction>

   <container-transaction>
     <method>
        <ejb-name>MessageEJB</ejb-name>
        <method-name>*</method-name>
     </method>
     <trans-attribute>Required</trans-attribute>
   </container-transaction>
 </assembly-descriptor>

</ejb-jar>
