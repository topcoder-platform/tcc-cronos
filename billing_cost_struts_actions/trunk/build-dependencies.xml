	  <property name="javaee.jar" value="${ext_libdir}/javaee/5.0/javaee.jar"/>
	  <property name="spring.jar" value="${ext_libdir}/Spring/2.5.6/dist/spring.jar"/>
		<property name="spring-test.jar" value="${ext_libdir}/Spring/2.5.6/dist/modules/spring-test.jar"/>
    
    <path id="component.tcs-dependencies">
		  <pathelement location="${base_exception.jar}"/>
		  <pathelement location="${logging_wrapper.jar}"/>
		  <pathelement location="${object_formatter.jar}"/>
		  <pathelement location="${typesafe_enum.jar}"/>
    </path>

    <path id="component.3rdParty-dependencies">
		    <pathelement location="${javaee.jar}"/>
		    <pathelement location="${spring.jar}"/>
				<pathelement location="${service.jar}"/>
        <pathelement location="${xwork-2.2.3.jar}"/>    	
        <pathelement location="${struts2-core-2.2.3.jar}"/>
	  </path>
	
    <path id="component.test.3rdParty-dependencies">
        <pathelement location="${junit.jar}"/>
        <pathelement location="${mockito.jar}"/>
		    <pathelement location="${spring-test.jar}"/>
		    <pathelement location="${ognl-3.0.1.jar}"/>
		    <pathelement location="${freemarker-2.3.16.jar}"/>
      	<pathelement location="${struts2-spring-plugin-2.2.3.jar}"/>
		    <pathelement location="${struts2-junit-plugin-2.2.3.jar}"/>   	
	    	<pathelement location="${commons-lang-2.5.jar}"/>
		    <pathelement location="${commons-fileupload-1.2.2.jar}"/>
		    <pathelement location="${commons-io-2.0.1.jar}"/>
		    <pathelement location="${commons-logging-1.1.1.jar}"/>
       	<pathelement location="${commons-logging-api-1.1.jar}"/>
		    <pathelement location="${javassist-3.11.0.GA.jar}"/>
