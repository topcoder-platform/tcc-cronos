<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm orm_1_0.xsd"
	version="1.0">
	
	<mapped-superclass class="hr.leads.services.model.jpa.IdentifiableEntity">
        <attributes>
            <id name="id">
                <column name="id" nullable="false" unique="true" />
                <generated-value strategy="IDENTITY" />
            </id>
        </attributes>
    </mapped-superclass>
    
   <mapped-superclass class="hr.leads.services.model.jpa.NamedEntity">
        <attributes>
            <basic name="name">
                <column name="name" length="45" unique="true" nullable="false" />
            </basic>
        </attributes>
    </mapped-superclass>
    
	<entity class="hr.leads.services.model.jpa.SystemConfigurationProperty">
		<table name="system_configuration" />
		<attributes>
			<basic name="value">
				<column name="value" length="45" nullable="false" />
			</basic>
		</attributes>
	</entity>


</entity-mappings>