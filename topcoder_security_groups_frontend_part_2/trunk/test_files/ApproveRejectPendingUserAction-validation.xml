<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN"
       "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
  <field name="approved">
      <field-validator type="required">
          <message>Approved flag must be specified.</message>
      </field-validator>
  </field>
  <field name="rejectReason">
      <field-validator type="requiredstring">
			<param name="trim">true</param>
            <message>RejectReason must be specified.</message>
      </field-validator>
      <field-validator type="stringlength">
		    <param name="maxlength">200</param>
			<message>RejectReason must be not longer than 200 characters.</message>
      </field-validator>
  </field>
</validators>
