<project name="Dependency Import" default="dist" basedir=".">
    <!-- property file defining the component's dependencies -->
    <property name="data_entitlement.name" value="data_entitlement" />
    <property name="data_entitlement.version" value="1.1.4" />
    <property name="data_entitlement.path" value="${data_entitlement.name}/${data_entitlement.version}" />
    <property name="data_entitlement.jar" value="${tcs_libdir}/${data_entitlement.path}/${data_entitlement.name}.jar" />

    <property name="user_group_manager.name" value="user_group_manager" />
    <property name="user_group_manager.version" value="1.0.1" />
    <property name="user_group_manager.path" value="${user_group_manager.name}/${user_group_manager.version}" />
    <property name="user_group_manager.jar" value="${tcs_libdir}/${user_group_manager.path}/${user_group_manager.name}.jar" />

    <property name="logging_wrapper.name" value="logging_wrapper" />
    <property name="logging_wrapper.version" value="2.0.0" />
    <property name="logging_wrapper.path" value="${logging_wrapper.name}/${logging_wrapper.version}" />
    <property name="logging_wrapper.jar" value="${tcs_libdir}/${logging_wrapper.path}/${logging_wrapper.name}.jar" />

    <property name="base_exception.name" value="base_exception" />
    <property name="base_exception.version" value="2.0.0" />
    <property name="base_exception.path" value="${base_exception.name}/${base_exception.version}" />
    <property name="base_exception.jar" value="${tcs_libdir}/${base_exception.path}/${base_exception.name}.jar" />

    <property name="object_formatter.name" value="object_formatter" />
    <property name="object_formatter.version" value="1.0.0" />
    <property name="object_formatter.path" value="${object_formatter.name}/${object_formatter.version}" />
    <property name="object_formatter.jar" value="${tcs_libdir}/${object_formatter.path}/${object_formatter.name}.jar" />

    <property name="security_facade.name" value="security_facade" />
    <property name="security_facade.version" value="2.1.1" />
    <property name="security_facade.path" value="${security_facade.name}/${security_facade.version}" />
    <property name="security_facade.jar" value="${tcs_libdir}/${security_facade.path}/${security_facade.name}.jar" />

    <!-- 3rd party dependencies -->
    <property name="junit.jar" value="${ext_libdir}/junit/3.8.2/junit.jar"/>

    <property name="hibernate.dir" value="${ext_libdir}/hibernate/3.2.5.GA"/>
    <property name="hibernate.jar" value="${hibernate.dir}/hibernate3.jar"/>
    <property name="jta.jar" value="${hibernate.dir}/lib/jta.jar"/>
    <property name="dom4j.jar" value="${hibernate.dir}/lib/dom4j-1.6.1.jar"/>
    <property name="commons-logging.jar" value="${hibernate.dir}/lib/commons-logging-1.0.4.jar"/>
    <property name="commons-collections.jar" value="${hibernate.dir}/lib/commons-collections-2.1.1.jar"/>
    <property name="cglib.jar" value="${hibernate.dir}/lib/cglib-2.1.3.jar"/>
    <property name="asm-attrs.jar" value="${hibernate.dir}/lib/asm-attrs.jar"/>
    <property name="asm.jar" value="${hibernate.dir}/lib/asm.jar"/>
    <property name="antlr.jar" value="${hibernate.dir}/lib/antlr-2.7.6.jar"/>

    <property name="mysql.jar" value="${ext_libdir}/mysql/5.0.5/mysql-connector-java-5.0.5-bin.jar"/>
    

    <!-- the required path elements must be defined even if empty -->
    <path id="component.tcs-dependencies">
        <pathelement location="${data_entitlement.jar}" />
        <pathelement location="${base_exception.jar}" />
        <pathelement location="${logging_wrapper.jar}" />
        <pathelement location="${user_group_manager.jar}"/>
        <pathelement location="${security_facade.jar}" />
        <pathelement location="${object_formatter.jar}" />
    </path>
    <path id="component.3rdParty-dependencies">
        <pathelement location="${hibernate.jar}"/>
        <pathelement location="${jta.jar}"/>
        <pathelement location="${dom4j.jar}"/>
        <pathelement location="${commons-logging.jar}"/>
        <pathelement location="${commons-collections.jar}"/>
        <pathelement location="${cglib.jar}"/>
        <pathelement location="${asm-attrs.jar}"/>
        <pathelement location="${asm.jar}"/>
        <pathelement location="${antlr.jar}"/>

        <pathelement location="${mysql.jar}"/>
    </path>
    <path id="component.test.3rdParty-dependencies" />
</project>
