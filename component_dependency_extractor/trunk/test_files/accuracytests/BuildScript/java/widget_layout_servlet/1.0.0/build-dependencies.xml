<project name="Dependency Import" default="dist" basedir=".">
    <!-- property file defining the component's dependencies -->
    
    <!-- Properties used in compile_targets ANT target -->
    <property name="component.target" value="1.5"/>
    <property name="component.bootclasspath" value="${java_1_5_bootclasspath}"/>
    
    <!-- TCS dependencies -->
    <property name="base_exception.jar" value="${tcs_libdir}/base_exception/2.0.0/base_exception.jar"/>
    <property name="json_object.jar" value="${tcs_libdir}/json_object/1.0/json_object.jar"/>
    <property name="widget_layout_persistence.jar" value="${tcs_libdir}/widget_layout_persistence/1.0.0/widget_layout_persistence.jar"/>
    <property name="logging_wrapper.jar" value="${tcs_libdir}/logging_wrapper/2.0.0/logging_wrapper.jar"/>
    <property name="object_formatter.jar" value="${tcs_libdir}/object_formatter/1.0.0/object_formatter.jar"/>
    <property name="multiple_locale_resource_bundle.jar" value="${tcs_libdir}/multiple_locale_resource_bundle/1.0/multiple_locale_resource_bundle.jar"/>
    <property name="configuration_api.jar" value="${tcs_libdir}/configuration_api/1.0.0/configuration_api.jar"/>

    <!-- define 3rd party dependencies -->
    <property name="spring.dir" value="${ext_libdir}/spring-framework/2.5.0"/>
    <path id="spring.classpath">
        <fileset dir="${spring.dir}">
            <include name="*.jar"/>
            <include name="lib/j2ee/*.jar"/>
            <include name="dist/*.jar"/>
            <include name="dist/modules/*.jar"/>
        </fileset>
    </path>
    <property name="httpunit.dir" value="${ext_libdir}/httpunit/1.6.2"/>
    <path id="httpunit.classpath">
        <fileset dir="${httpunit.dir}">
            <include name="*.jar"/>
            <include name="lib/*.jar"/>
            <include name="jars/*.jar"/>
            <include name="mockejb-0.6-beta2/*.jar"/>
        </fileset>
    </path>
    <property name="cactus.dir" value="${ext_libdir}/cactus/1.7.2"/>
    <path id="cactus.classpath">
        <fileset dir="${cactus.dir}">
            <include name="*.jar"/>
            <include name="lib/*.jar"/>
        </fileset>
    </path>

    <!-- 3rd party dependencies -->
    <property name="junit.jar" value="${ext_libdir}/junit/3.8.2/junit.jar"/>

    <path id="component.tcs-dependencies">
        <pathelement location="${base_exception.jar}"/>
        <pathelement location="${json_object.jar}"/>
        <pathelement location="${widget_layout_persistence.jar}"/>
        <pathelement location="${multiple_locale_resource_bundle.jar}"/>
        <pathelement location="${logging_wrapper.jar}"/>
        <pathelement location="${object_formatter.jar}"/>
        <pathelement location="${configuration_api.jar}"/>
    </path>
    
    <path id="component.3rdParty-dependencies">
        <path refid="spring.classpath"/>
        <path refid="httpunit.classpath"/>
        <path refid="cactus.classpath"/>
    </path>
    
    <path id="component.test.3rdParty-dependencies">
        <pathelement location="${junit.jar}"/>
    </path>
    
</project>
