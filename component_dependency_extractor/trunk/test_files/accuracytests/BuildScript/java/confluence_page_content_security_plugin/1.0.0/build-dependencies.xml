    <property name="oscore.jar" value="${confluence.dir}/confluence/WEB-INF/lib/oscore-2.2.4.jar"/>
    <property name="propertyset.jar" value="${confluence.dir}/confluence/WEB-INF/lib/propertyset-1.3-21Nov03.jar"/>
    <property name="radeox.jar" value="${confluence.dir}/confluence/WEB-INF/lib/radeox-1.0b2-forked-22Apr2004.jar"/>

    <property name="atlassian-pdk.jar" value="${ext_libdir}/confluence/atlassian-pdk-2.1.1.jar"/>
    <property name="atlassian-core.jar" value="${ext_libdir}/confluence/atlassian-core-2006.07.14.jar"/>

    <path id="component.tcs-dependencies">
        <pathelement location="${base_exception.jar}"/>
        <pathelement location="${typesafe_enum.jar}"/>
        <pathelement location="${object_formatter.jar}"/>
        <pathelement location="${logging_wrapper.jar}"/>
    </path>
    <path id="component.3rdParty-dependencies">
        <pathelement location="${servlet.jar}"/>
        <pathelement location="${velocity.jar}"/>
        <pathelement location="${commons-logging.jar}"/>
        <pathelement location="${commons-lang.jar}"/>

        <pathelement location="${confluence.jar}"/>
        <pathelement location="${atlassian-bandana.jar}"/>
        <pathelement location="${atlassian-user.jar}"/>
        <pathelement location="${atlassian-renderer.jar}"/>
        <pathelement location="${atlassian-seraph.jar}"/>
        <pathelement location="${atlassian-event.jar}"/>
