    <property name="easymock.jar" value="${ext_libdir}/easymock/1.2/easymock.jar"/>

    <property name="spring.dir" value="${ext_libdir}/spring-framework/2.5.0"/>
    <property name="servlet.jar" value="${spring.dir}/lib/j2ee/servlet-api.jar"/>
    <property name="velocity.jar" value="${spring.dir}/lib/velocity/velocity-1.5.jar"/>
    <property name="commons-logging.jar" value="${spring.dir}/lib/jakarta-commons/commons-logging.jar"/>
    <property name="commons-lang.jar" value="${spring.dir}/lib/jakarta-commons/commons-lang.jar"/>

    <property name="confluence.dir" value="${ext_libdir}/confluence-2.7.1-std"/>
    <property name="confluence.jar" value="${confluence.dir}/confluence/WEB-INF/lib/confluence-2.7.1.jar"/>
