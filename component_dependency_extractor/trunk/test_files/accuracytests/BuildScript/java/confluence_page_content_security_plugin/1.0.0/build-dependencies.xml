    <property name="atlassian-event.jar" value="${confluence.dir}/confluence/WEB-INF/lib/atlassian-event-0.3.jar"/>
    <property name="atlassian-spring.jar" value="${confluence.dir}/confluence/WEB-INF/lib/atlassian-spring-0.7.jar"/>
    <property name="atlassian-bucket.jar" value="${confluence.dir}/confluence/WEB-INF/lib/atlassian-bucket-0.20.jar"/>
    <property name="atlassian-mail.jar" value="${confluence.dir}/confluence/WEB-INF/lib/atlassian-mail-1.5.jar"/>
    <property name="atlassian-config.jar" value="${confluence.dir}/confluence/WEB-INF/lib/atlassian-config-0.8.jar"/>
