        <pathelement location="${atlassian-bucket.jar}"/>
        <pathelement location="${atlassian-mail.jar}"/>
        <pathelement location="${atlassian-config.jar}"/>
        <pathelement location="${atlassian-extras.jar}"/>
        <pathelement location="${xwork.jar}"/>
        <pathelement location="${oscore.jar}"/>
        <pathelement location="${propertyset.jar}"/>
        <pathelement location="${radeox.jar}"/>

