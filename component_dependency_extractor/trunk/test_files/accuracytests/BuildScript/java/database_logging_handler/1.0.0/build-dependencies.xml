<project name="Dependency Import" default="dist" basedir=".">

    <!-- Properties used in compile_targets ANT target for JDK version 5 -->
    <property name="component.target" value="1.5"/>
    <property name="component.bootclasspath" value="${java_1_5_bootclasspath}"/>


    <!-- property file defining the component's dependencies -->

    <!-- TCS dependencies -->
    <property name="db_connection_factory.jar" value="${tcs_libdir}/db_connection_factory/1.1/db_connection_factory.jar" />
    <property name="id_generator.jar" value="${tcs_libdir}/id_generator/3.0/id_generator.jar" />
    <property name="base_exception.jar" value="${tcs_libdir}/base_exception/2.0.0/base_exception.jar" />
    <property name="configuration_api.jar" value="${tcs_libdir}/configuration_api/1.0.0/configuration_api.jar" />
    <property name="configuration_manager.jar" value="${tcs_libdir}/configuration_manager/2.1.5/configuration_manager.jar" />
    <property name="object_factory.jar" value="${tcs_libdir}/object_factory/2.0.1/object_factory.jar" />

    <!-- 3rd party dependencies -->
    <property name="junit.jar" value="${ext_libdir}/junit/3.8.2/junit.jar"/>        
    <property name="jdbc.jar" value="${ext_libdir}/jdbc/mysql/3.1.12/mysql-connector-java-3.1.12-bin.jar" />

    <property name="hibernate.dir" value="${ext_libdir}/hibernate/3.2.6.GA" />
    <property name="antlr.jar" value="${hibernate.dir}/lib/antlr-2.7.6.jar" />
    <property name="asm.jar" value="${hibernate.dir}/lib/asm.jar" />
    <property name="cglib.jar" value="${hibernate.dir}/lib/cglib-2.1.3.jar" />
    <property name="commons-collections.jar" value="${hibernate.dir}/lib/commons-collections-2.1.1.jar" />
    <property name="commons-logging.jar" value="${hibernate.dir}/lib/commons-logging-1.0.4.jar" />
    <property name="dom4j.jar" value="${hibernate.dir}/lib/dom4j-1.6.1.jar" />
    <property name="ehcache.jar" value="${hibernate.dir}/lib/ehcache-1.2.3.jar" />
    <property name="hibernate3.jar" value="${hibernate.dir}/hibernate3.jar" />
    <property name="jta.jar" value="${hibernate.dir}/lib/jta.jar" />

    <property name="hibernate-entitymanager.dir" value="${ext_libdir}/hibernate-entitymanager/3.3.2.GA" />
    <property name="ejb3-persistence.jar" value="${hibernate-entitymanager.dir}/lib/ejb3-persistence.jar" />
    <property name="hibernate-annotations.jar" value="${hibernate-entitymanager.dir}/lib/hibernate-annotations.jar" />
    <property name="hibernate-commons-annotations.jar" value="${hibernate-entitymanager.dir}/lib/hibernate-commons-annotations.jar" />
    <property name="hibernate-entitymanager.jar" value="${hibernate-entitymanager.dir}/hibernate-entitymanager.jar" />

    <property name="log4j.jar" value="${ext_libdir}/log4j/1.2.15/log4j-1.2.15.jar" />

    <!-- the required path elements must be defined even if empty -->
    <path id="component.tcs-dependencies">
        <pathelement location="${base_exception.jar}" />
        <pathelement location="${configuration_api.jar}" />
        <pathelement location="${configuration_manager.jar}" />
        <pathelement location="${object_factory.jar}" />
        <pathelement location="${id_generator.jar}" />
        <pathelement location="${db_connection_factory.jar}" />
    </path>

    <path id="component.3rdParty-dependencies">
        <pathelement location="${log4j.jar}" />

        <pathelement location="${antlr.jar}" />
        <pathelement location="${asm.jar}" />
        <pathelement location="${cglib.jar}" />
        <pathelement location="${commons-collections.jar}" />
        <pathelement location="${commons-logging.jar}" />
        <pathelement location="${dom4j.jar}" />
        <pathelement location="${ehcache.jar}" />
        <pathelement location="${hibernate3.jar}" />
        <pathelement location="${jta.jar}" />

        <pathelement location="${ejb3-persistence.jar}" />
        <pathelement location="${hibernate-annotations.jar}" />
        <pathelement location="${hibernate-commons-annotations.jar}" />
        <pathelement location="${hibernate-entitymanager.jar}" />

        <pathelement location="${jdbc.jar}" />
    </path>
    <path id="component.test.3rdParty-dependencies">
        <pathelement location="${junit.jar}" />
    </path>
</project>

