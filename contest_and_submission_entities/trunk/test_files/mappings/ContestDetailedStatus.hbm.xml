<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.topcoder.service.studio.contest">
	<class name="ContestDetailedStatus" table="contest_detailed_status_lu" lazy="true">
		<comment>
			This table saves contest detailed status like description, linked contest id and linke contest status id.
		</comment>

		<id name="contestDetailedStatusId" column="contest_detailed_status_id" type="long" unsaved-value="-1">
			<generator class="sequence">
				<param name="sequence">STUDIO_CONTEST_DETAILED_STATUS_SEQ</param>
			</generator>
		</id>

		<property name="description" length="100"
			column="contest_detailed_status_desc" />

		<many-to-one name="contestStatus" column="contest_status_id" not-null="true"
			class="com.topcoder.service.studio.contest.ContestStatus"
			 />
	</class>
</hibernate-mapping>