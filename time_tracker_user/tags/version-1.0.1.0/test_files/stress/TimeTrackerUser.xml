<CMConfig>
	<Property name="connection_name">
		<Value>Informix</Value>
	</Property>

	<Property name="connections">
		<Property name="default">
			<Value>Informix</Value>
		</Property>

		<Property name="Informix">
			<Property name="producer">
				<Value>com.topcoder.db.connectionfactory.producers.JDBCConnectionProducer</Value>
			</Property>
			<Property name="parameters">
                <Property name="jdbc_driver">
                    <Value>com.informix.jdbc.IfxDriver</Value>
                </Property>
                <Property name="jdbc_url">
                    <Value>jdbc:informix-sqli://127.0.0.1:1526/time_tracker_user:informixserver=informix</Value>
                </Property>
                <Property name="user">
                    <Value>informix</Value>
                </Property>
                <Property name="password">
                    <Value>informix</Value>
                </Property>
			</Property>
		</Property>
	</Property>

	<Property name="UserStoreNames">
		<Value>StressTest1</Value>
		<Value>StressTest2</Value>
	</Property>

	<Property name="ClassName.StressTest1">
		<Value>com.topcoder.timetracker.user.DbUserStore</Value>
	</Property>
	<Property name="ClassName.StressTest2">
		<Value>com.topcoder.timetracker.user.DbUserStore</Value>
	</Property>

	<Property name="ConnectionString.StressTest1">
		<Value>Informix</Value>
	</Property>	
	<Property name="ConnectionString.StressTest2">
		<Value>Informix</Value>
	</Property>	

	<!-- Configuration for SQLAuthorizationPersistence @ Authorization 2.0.1 -->
	<Property name="db_connection_factory">
        <Property name="class">
            <Value>com.topcoder.db.connectionfactory.DBConnectionFactoryImpl</Value>
        </Property>
		<Property name="namespace">
			<Value>com.topcoder.timetracker.user</Value>
		</Property>
		<Property name="connection_name">
			<Value>Informix</Value>
		</Property>
	</Property>

	<Property name="cache_factory">
		<Property name="class">
			<Value>com.topcoder.security.authorization.persistence.CacheFactoryImpl</Value>
		</Property>
		<Property name="namespace">
			<Value>com.topcoder.security.authorization.persistence.CacheFactoryImpl</Value>
		</Property>
	</Property>

	<!-- FOR LOG-->
	<Property name="logFactory">
		<Value>com.topcoder.util.log.jdk14.Jdk14LogFactory</Value>
	</Property>
</CMConfig>