<project name="Dependency Import" default="dist" basedir=".">
    <!-- property file defining the component's dependencies -->
    <property name="junit.jar" value="${ext_libdir}/junit/3.8.2/junit.jar"/>
    <!-- define TCS dependencies -->
    <property name="base_exception.jar" value="${tcs_libdir}/base_exception/2.0/base_exception.jar"/>
    <property name="db_connection_factory.jar" value="${tcs_libdir}/db_connection_factory/1.1/db_connection_factory.jar"/>
    <property name="object_formatter.jar" value="${tcs_libdir}/object_formatter/1.0/object_formatter.jar"/>
    <property name="logging_wrapper.jar" value="${tcs_libdir}/logging_wrapper/2.0/logging_wrapper.jar"/>
    <property name="configuration_api.jar" value="${tcs_libdir}/configuration_api/1.0/configuration_api.jar"/>
    <!-- define 3rd party dependencies -->
    <property name="jboss.dir" value="${ext_libdir}/jboss-4.2.2.GA"/>
    <property name="jboss-ejb3x.jar" value="${jboss.dir}/client/jboss-ejb3x.jar"/>
    <property name="jbossall-client.jar" value="${jboss.dir}/client/jbossall-client.jar"/>
    <property name="ejb3-persistence.jar" value="${jboss.dir}/client/ejb3-persistence.jar"/>
    <property name="log4j.jar" value="${jboss.dir}/client/log4j.jar"/>
    
    <property name="ifxjdbc.jar" value="${ext_libdir}/informix/1.4.1/ifxjdbc.jar"/>
    <path id="component.tcs-dependencies" >
        <pathelement location="${base_exception.jar}"/>
        <pathelement location="${configuration_api.jar}"/>
        <pathelement location="${db_connection_factory.jar}"/>
        <pathelement location="${object_formatter.jar}"/>
        <pathelement location="${logging_wrapper.jar}"/>
     </path>
    <path id="component.3rdParty-dependencies" >
        <pathelement location="${jboss-ejb3x.jar}"/>
        <pathelement location="${jbossall-client.jar}"/>
        <pathelement location="${ejb3-persistence.jar}"/>
        <pathelement location="${log4j.jar}"/>
        <pathelement location="${ifxjdbc.jar}"/>
     </path>
    <path id="component.test.3rdParty-dependencies">
        <pathelement location="${junit.jar}"/>
    </path>

    <!-- Properties used in compile_targets ANT target -->
    <property name="component.target" value="1.4"/>
    <property name="component.bootclasspath" value="${java_1_4_bootclasspath}"/>    
</project>
