\par }{\f1\fs20\cf11\insrsid5903344 // Create a ProjectUtility Delegate}{\f1\fs20\insrsid5903344 
\par }{\f1\fs20\cf9\insrsid5903344 ProjectUtility projectUtil = new ProjectUtilityDelegate("applicationNamespace.project");
\par }{\f1\fs20\insrsid5903344 
\par }{\f1\fs20\cf11\insrsid5903344 // Create a new Project.}{\f1\fs20\insrsid5903344 
\par }{\f1\fs20\cf9\insrsid5903344 Project project = new Project();
\par project.setCreationUser("TCUSER");
\par project.setModificationUser("TCUSER");
\par project.setName("Time Tracker Project");
\par project.setDescription("Topcoder Component Competition");
\par project.setCompanyId(1);
\par project.setSalesTax("6.5");
