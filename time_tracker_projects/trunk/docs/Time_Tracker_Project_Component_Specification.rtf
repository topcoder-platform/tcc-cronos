\par }{\f1\fs20\cf9\insrsid5903344 projectUtil.addProject(project, true);
\par }{\f1\fs20\insrsid5903344 
\par }{\f1\fs20\cf11\insrsid5903344 // Search for a Project that started in a specified date range, and whose manager has a userId of 50.
\par }{\f1\fs20\cf9\insrsid5903344 ProjectFilterFactory factory = projectUtil.getFilterFactory();
\par Filter filter1 = factory.createContainsProjectManagerFilter(50);
\par Filter filter2 = factory.createStartDateFilter(startDate, endDate);
\par Filter andFilter = new AndFilter(filter1, filter2);
\par 
\par Project[] searchResults = projectUtil.searchProjects(andFilter);
